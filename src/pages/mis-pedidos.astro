>
</div>

<script>
  import { addToast } from "../stores/toastStore";
  import { showModal } from "../stores/modalStore";

  // L√≥gica para el Modal de Factura
  const modal = document.getElementById("invoice-modal");
  const closeModalBtn = document.getElementById("close-modal");
  const invoiceForm = document.getElementById(
    "invoice-form",
  ) as HTMLFormElement;
  const modalOrderIdSpan = document.getElementById("modal-order-id");
  const formOrderIdInput = document.getElementById(
    "form-order-id",
  ) as HTMLInputElement;

  // Abrir modal
  document.querySelectorAll(".btn-request-invoice").forEach((btn) => {
    btn.addEventListener("click", () => {
      const b = btn as HTMLButtonElement;
      if (modal && modalOrderIdSpan && formOrderIdInput) {
        modalOrderIdSpan.innerText = `#${b.dataset.orderLabel}`;
        formOrderIdInput.value = b.dataset.orderId || "";

        // Autofill desde el elemento de referencia
        const ref = document.getElementById("billing-data-ref");
        if (ref && invoiceForm) {
          (
            invoiceForm.querySelector(
              '[name="razon_social"]',
            ) as HTMLInputElement
          ).value = ref.dataset.razon || "";
          (
            invoiceForm.querySelector('[name="nif"]') as HTMLInputElement
          ).value = ref.dataset.nif || "";
          (
            invoiceForm.querySelector('[name="direccion"]') as HTMLInputElement
          ).value = ref.dataset.direccion || "";
          (
            invoiceForm.querySelector('[name="ciudad"]') as HTMLInputElement
          ).value = ref.dataset.ciudad || "";
          (
            invoiceForm.querySelector(
              '[name="codigo_postal"]',
            ) as HTMLInputElement
          ).value = ref.dataset.cp || "";
        }

        modal.classList.remove("hidden");
        modal.classList.add("flex");
      }
    });
  });

  // Cerrar modal
  const closeModal = () => {
    if (modal) {
      modal.classList.add("hidden");
      modal.classList.remove("flex");
    }
  };

  closeModalBtn?.addEventListener("click", closeModal);
  modal?.addEventListener("click", (e) => {
    if (e.target === modal) closeModal();
  });

  // L√≥gica para el Modal de Devoluci√≥n
  const returnModal = document.getElementById("return-modal");
  const closeReturnModalBtn = document.getElementById("close-return-modal");
  const btnConfirmReturnRequest = document.getElementById(
    "btn-confirm-return-request",
  );
  const returnReasonSelect = document.getElementById(
    "return-reason-select",
  ) as HTMLSelectElement;
  const returnModalOrderIdSpan = document.getElementById(
    "return-modal-order-id",
  );
  const returnItemsList = document.getElementById("return-items-list");
  const selectAllReturns = document.getElementById(
    "select-all-returns",
  ) as HTMLInputElement;
  const returnTypeBadge = document.getElementById("return-type-badge");

  let currentOrderIdReturn = "";
  let currentOrderItemsReturn: any[] = [];

  const updateReturnType = () => {
    const checkboxes = document.querySelectorAll(
      ".item-checkbox",
    ) as NodeListOf<HTMLInputElement>;
    const checked = document.querySelectorAll(
      ".item-checkbox:checked",
    ) as NodeListOf<HTMLInputElement>;

    if (checked.length === 0) {
      if (returnTypeBadge) {
        returnTypeBadge.innerText = "Selecciona art√≠culos";
        returnTypeBadge.className =
          "text-[9px] font-black uppercase px-2 py-0.5 rounded-md bg-slate-100 text-slate-400";
      }
      if (selectAllReturns) selectAllReturns.checked = false;
      return;
    }

    // Es completa si todos los checkboxes est√°n marcados Y sus cantidades son el m√°ximo
    let isComplete = checked.length === checkboxes.length;
    if (isComplete) {
      checkboxes.forEach((cb) => {
        const container = cb.closest("div.flex.items-center.justify-between");
        const qtySelect = container?.querySelector(
          ".item-qty-select",
        ) as HTMLSelectElement;
        // Si el valor seleccionado no es el m√°ximo posible
        if (
          qtySelect &&
          qtySelect.value !==
            qtySelect.options[qtySelect.options.length - 1].value
        ) {
          isComplete = false;
        }
      });
    }

    if (returnTypeBadge) {
      if (isComplete) {
        returnTypeBadge.innerText = "Devoluci√≥n Completa";
        returnTypeBadge.className =
          "text-[9px] font-black uppercase px-2 py-0.5 rounded-md bg-green-100 text-green-600 font-bold border border-green-200";
      } else {
        returnTypeBadge.innerText = "Devoluci√≥n Parcial";
        returnTypeBadge.className =
          "text-[9px] font-black uppercase px-2 py-0.5 rounded-md bg-blue-100 text-blue-600 font-bold border border-blue-200";
      }
    }

    if (selectAllReturns)
      selectAllReturns.checked = checked.length === checkboxes.length;
  };

  selectAllReturns?.addEventListener("change", () => {
    const checkboxes = document.querySelectorAll(
      ".item-checkbox",
    ) as NodeListOf<HTMLInputElement>;
    checkboxes.forEach((cb) => {
      cb.checked = selectAllReturns.checked;
      const container = cb.closest("div.flex.items-center.justify-between");
      const qtySelect = container?.querySelector(
        ".item-qty-select",
      ) as HTMLSelectElement;
      if (qtySelect) {
        if (selectAllReturns.checked) {
          qtySelect.selectedIndex = qtySelect.options.length - 1;
        } else {
          qtySelect.selectedIndex = 0;
        }
      }
    });
    updateReturnType();
  });

  document.querySelectorAll(".btn-request-return").forEach((btn) => {
    btn.addEventListener("click", () => {
      const b = btn as HTMLButtonElement;
      const status = b.dataset.orderStatus;
      const orderId = b.dataset.orderId || "";

      if (status === "shipped") {
        showModal({
          title: "Env√≠o en curso",
          message:
            "Tu pedido est√° actualmente en camino. Por motivos de seguridad y log√≠stica, solo podr√°s solicitar la devoluci√≥n una vez que el paquete haya sido entregado correctamente y el estado cambie a 'Entregado'.",
          type: "info",
        });
        return;
      }

      if (returnModal && returnModalOrderIdSpan && returnItemsList) {
        currentOrderIdReturn = orderId;
        returnModalOrderIdSpan.innerText = `#${b.dataset.orderLabel}`;

        // Buscar los items del pedido actual (disponibles en el DOM o inyectados)
        // Usaremos una t√©cnica simple: buscar en el contenedor padre las l√≠neas de pedido
        const container = b.closest(".bg-white.rounded-2xl");
        const itemRows = container?.querySelectorAll(
          ".flex.items-center.gap-4",
        );

        returnItemsList.innerHTML = "";
        itemRows?.forEach((row: any, idx) => {
          const name = row.querySelector("h4")?.innerText || "Producto";
          const details = row.querySelector("p")?.innerText || "";
          const qtyText = details.split("Cantidad:")[1]?.trim() || "1";
          const qty = parseInt(qtyText);

          // Asumiremos que el orden coincide o usaremos data-attributes si los pusiera (lo har√© en el pr√≥ximo paso si falla)
          // Para robustez, inyectar√© los items como JSON en el bot√≥n en el futuro, pero ahora intentar√© leer del DOM.
          const div = document.createElement("div");
          div.className =
            "flex items-center justify-between p-3 bg-white rounded-xl border border-slate-100 shadow-sm";
          div.innerHTML = `
                <div class="flex items-center gap-3">
                    <input type="checkbox" name="item_return_${idx}" class="item-checkbox w-4 h-4 rounded border-slate-200 text-brand-gold focus:ring-brand-gold" data-idx="${idx}">
                    <div class="flex flex-col">
                        <span class="text-xs font-bold text-slate-800">${name}</span>
                        <span class="text-[10px] text-slate-400">${details.split("|")[0]}</span>
                    </div>
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-[10px] font-black text-slate-400 uppercase">Cant:</span>
                    <select class="item-qty-select bg-slate-50 border border-slate-100 rounded-lg text-[10px] font-bold py-1 px-2 focus:ring-2 focus:ring-brand-gold/10 outline-none">
                        ${Array.from({ length: qty }, (_, i) => `<option value="${i + 1}">${i + 1}</option>`).join("")}
                    </select>
                </div>
            `;
          returnItemsList.appendChild(div);
        });

        // Necesitamos mapear a los IDs reales de order_items.
        // Lo m√°s seguro es pasar el JSON de items en el bot√≥n.
        // Voy a actualizar mis-pedidos.astro para incluir data-items-json
        if (selectAllReturns) selectAllReturns.checked = false;
        if (returnTypeBadge) {
          returnTypeBadge.innerText = "Selecciona art√≠culos";
          returnTypeBadge.className =
            "text-[9px] font-black uppercase px-2 py-0.5 rounded-md bg-slate-100 text-slate-400";
        }

        try {
          const itemsJson = (b as any).dataset.itemsJson;
          if (itemsJson) {
            currentOrderItemsReturn = JSON.parse(itemsJson);
            // Re-render con IDs reales
            returnItemsList.innerHTML = "";
            currentOrderItemsReturn.forEach((item, i) => {
              const rem = item.quantity - (item.return_refunded_quantity || 0);
              if (rem <= 0) return;

              const div = document.createElement("div");
              div.className =
                "flex items-center justify-between p-3 bg-white rounded-xl border border-slate-100 shadow-sm";
              div.innerHTML = `
                        <div class="flex items-center gap-3">
                            <input type="checkbox" value="${item.id}" class="item-checkbox w-4 h-4 rounded-md border-slate-200 text-brand-gold focus:ring-brand-gold" data-id="${item.id}">
                            <div class="flex flex-col">
                                <span class="text-xs font-bold text-slate-800 line-clamp-1">${item.product_name}</span>
                                <span class="text-[10px] text-slate-400">Talla: ${item.product_size}</span>
                            </div>
                        </div>
                        <div class="flex items-center gap-2">
                            <select class="item-qty-select bg-slate-50 border border-slate-100 rounded-lg text-[10px] font-bold py-1 px-2 focus:ring-2 focus:ring-brand-gold/10 outline-none">
                                ${Array.from({ length: rem }, (_, k) => `<option value="${k + 1}">${k + 1}</option>`).join("")}
                            </select>
                        </div>
                    `;
              returnItemsList.appendChild(div);
            });

            // A√±adir listeners a los nuevos checkboxes
            document
              .querySelectorAll(".item-checkbox, .item-qty-select")
              .forEach((el) => {
                el.addEventListener("change", updateReturnType);
              });
          }
        } catch (e) {
          console.error("Error parsing items JSON", e);
        }

        returnModal.classList.remove("hidden");
        returnModal.classList.add("flex");
      }
    });
  });

  btnConfirmReturnRequest?.addEventListener("click", async () => {
    const reason = returnReasonSelect.value;
    const selectedCheckboxes = document.querySelectorAll(
      ".item-checkbox:checked",
    );

    if (selectedCheckboxes.length === 0) {
      addToast("Selecciona al menos un art√≠culo para devolver", "error");
      return;
    }

    const itemsToReturn = Array.from(selectedCheckboxes).map((cb) => {
      const input = cb as HTMLInputElement;
      const container = input.closest("div.flex.items-center.justify-between");
      const qtySelect = container?.querySelector(
        ".item-qty-select",
      ) as HTMLSelectElement;
      return {
        id: parseInt(input.value),
        quantity: parseInt(qtySelect.value),
      };
    });

    try {
      btnConfirmReturnRequest.innerText = "Procesando...";
      (btnConfirmReturnRequest as HTMLButtonElement).disabled = true;

      const res = await fetch("/api/orders/return/request", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          orderId: currentOrderIdReturn,
          reason,
          itemsToReturn,
        }),
      });

      if (!res.ok) throw new Error("No se pudo procesar la solicitud");

      const allCheckboxes = document.querySelectorAll(".item-checkbox");
      let isComplete = selectedCheckboxes.length === allCheckboxes.length;

      if (isComplete) {
        selectedCheckboxes.forEach((cb) => {
          const container = (cb as HTMLElement).closest(
            "div.flex.items-center.justify-between",
          );
          const qtySelect = container?.querySelector(
            ".item-qty-select",
          ) as HTMLSelectElement;
          if (
            qtySelect &&
            qtySelect.value !==
              qtySelect.options[qtySelect.options.length - 1].value
          ) {
            isComplete = false;
          }
        });
      }

      addToast(
        `Solicitud de devoluci√≥n ${isComplete ? "completa" : "parcial"} enviada correctamente.`,
        "success",
      );
      setTimeout(() => window.location.reload(), 1500);
    } catch (err) {
      addToast("Error al solicitar devoluci√≥n.", "error");
      btnConfirmReturnRequest.innerText = "Confirmar Devoluci√≥n";
      (btnConfirmReturnRequest as HTMLButtonElement).disabled = false;
    }
  });

  // Marcar como entregado al transportista
  document.querySelectorAll(".btn-mark-handed").forEach((btn) => {
    btn.addEventListener("click", async () => {
      const b = btn as HTMLButtonElement;
      const orderId = b.dataset.orderId;

      try {
        b.innerText = "Sincronizando...";
        b.disabled = true;

        const res = await fetch("/api/orders/return/mark-handed", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ orderId }),
        });

        if (!res.ok) throw new Error("Error");

        addToast(
          "Estado actualizado. El administrador confirmar√° la recepci√≥n pronto.",
          "success",
        );
        setTimeout(() => window.location.reload(), 1500);
      } catch (err) {
        addToast("Error al actualizar el estado.", "error");
        b.innerText = "He entregado el paquete al transportista";
        b.disabled = false;
      }
    });
  });

  const closeReturnModal = () => {
    if (returnModal) {
      returnModal.classList.add("hidden");
      returnModal.classList.remove("flex");
    }
  };

  closeReturnModalBtn?.addEventListener("click", closeReturnModal);
  returnModal?.addEventListener("click", (e) => {
    if (e.target === returnModal) closeReturnModal();
  });

  // Enviar Formulario de Factura
  invoiceForm?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const submitBtn = invoiceForm.querySelector(
      'button[type="submit"]',
    ) as HTMLButtonElement;
    const formData = new FormData(invoiceForm);
    const data = {
      orderId: formData.get("orderId"),
      fiscalData: {
        razon_social: formData.get("razon_social"),
        nif: formData.get("nif"),
        direccion: formData.get("direccion"),
        ciudad: formData.get("ciudad"),
        codigo_postal: formData.get("codigo_postal"),
      },
    };

    try {
      submitBtn.disabled = true;
      submitBtn.innerText = "Procesando...";

      const response = await fetch("/api/orders/request-invoice", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      if (!response.ok) throw new Error("Error al procesar la factura");

      addToast("¬°Factura generada y enviada a tu email!", "success");
      setTimeout(() => window.location.reload(), 2000);
    } catch (err) {
      addToast("Hubo un error al procesar tu solicitud.", "error");
      submitBtn.disabled = false;
      submitBtn.innerText = "Generar y Enviar Factura";
    }
  });

  // Enviar Ticket/Recibo
  document.querySelectorAll(".btn-send-ticket").forEach((btn) => {
    btn.addEventListener("click", async (e) => {
      const b = btn as HTMLButtonElement;
      const originalHtml = b.innerHTML;

      try {
        b.disabled = true;
        b.innerHTML = "Enviando...";

        const response = await fetch("/api/send-invoice", {
          // Reusamos el endpoint pero ahora env√≠a ticket
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ orderId: b.dataset.orderId }),
        });

        if (!response.ok) throw new Error("Error");

        b.innerHTML = "‚úì Enviado";
        setTimeout(() => {
          b.disabled = false;
          b.innerHTML = originalHtml;
        }, 3000);
      } catch (err) {
