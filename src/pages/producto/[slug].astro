---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { supabase } from "../../lib/supabase";
import AddToCartButton from "../../components/islands/AddToCartButton";
import FavoriteButton from "../../components/islands/FavoriteButton";
import ProductInquiryForm from "../../components/islands/ProductInquiryForm";
import SizeRecommender from "../../components/islands/SizeRecommender";
import StoreSidebar from "../../components/ui/StoreSidebar.astro";
import SupportBanner from "../../components/ui/SupportBanner.astro";

const { slug } = Astro.params;

// Obtener producto
const { data: product } = await supabase
    .from("products")
    .select("*, categories(id, name, slug, parent_id)")
    .eq("slug", slug)
    .single();

if (!product) {
    return Astro.redirect("/");
}

// Obtener variantes
const { data: variants } = await supabase
    .from("product_variants")
    .select("*")
    .eq("product_id", product.id)
    .order("size");

const formatPrice = (cents: number) => {
    return new Intl.NumberFormat("es-ES", {
        style: "currency",
        currency: "EUR",
    }).format(cents / 100);
};

const getStockLabel = (stock: number) => {
    if (stock === 0)
        return {
            label: "Agotado",
            class: "bg-red-100 text-red-800",
            available: false,
        };
    if (stock < 10)
        return {
            label: "Pocas unidades",
            class: "bg-yellow-100 text-yellow-800",
            available: true,
        };
    return {
        label: "Disponible",
        class: "bg-green-100 text-green-800",
        available: true,
    };
};

const stockInfo = getStockLabel(product.stock);

// Variantes disponibles y agotadas
const availableVariants = variants?.filter((v) => v.stock > 0) || [];
const unavailableVariants = variants?.filter((v) => v.stock === 0) || [];

// Lógica de Descuentos
const hasActiveDiscount =
    product.discount_percentage > 0 &&
    (!product.discount_ends_at ||
        new Date(product.discount_ends_at) > new Date());

const finalPrice = hasActiveDiscount
    ? Math.round(product.price * (1 - product.discount_percentage / 100))
    : product.price;
---

<BaseLayout title={`${product.name} - FashionStore`}>
    <div class="min-h-screen bg-gray-50">
        <!-- Breadcrumb -->
        <div class="bg-white border-b">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
                <nav
                    class="flex items-center text-xs font-black uppercase tracking-widest text-slate-400 gap-2"
                >
                    <a href="/" class="hover:text-brand-gold transition-colors"
                        >Inicio</a
                    >
                    <span class="w-1 h-1 bg-slate-200 rounded-full"></span>
                    <a
                        href="/catalogo"
                        class="hover:text-brand-gold transition-colors"
                        >Catálogo</a
                    >
                    <span class="w-1 h-1 bg-slate-200 rounded-full"></span>
                    <a
                        href={`/catalogo/${product.categories.slug}`}
                        class="hover:text-brand-gold transition-colors"
                    >
                        {product.categories.name}
                    </a>
                    <span class="w-1 h-1 bg-slate-200 rounded-full"></span>
                    <span class="text-slate-900">{product.name}</span>
                </nav>
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="flex flex-col lg:flex-row gap-12">
                <!-- Sidebar -->
                <aside class="w-full lg:w-72 flex-shrink-0 order-1 lg:order-1">
                    <StoreSidebar
                        currentSlug={product.categories.slug}
                        showBanner={false}
                    />
                </aside>

                <!-- Product Detail Area -->
                <div class="flex-1 order-2 lg:order-2">
                    <div class="grid grid-cols-1 xl:grid-cols-2 gap-12">
                        <!-- Galería de imágenes -->
                        <div>
                            {
                                product.images && product.images.length > 0 ? (
                                    <div class="space-y-4">
                                        <div class="aspect-square bg-gray-100 rounded-3xl overflow-hidden border border-slate-100">
                                            <img
                                                id="main-image"
                                                src={product.images[0]}
                                                alt={product.name}
                                                class="w-full h-full object-cover"
                                            />
                                        </div>

                                        {product.images.length > 1 && (
                                            <div class="grid grid-cols-4 gap-4">
                                                {product.images.map(
                                                    (
                                                        img: string,
                                                        idx: number,
                                                    ) => (
                                                        <button
                                                            type="button"
                                                            data-image={img}
                                                            class={`thumbnail aspect-square rounded-2xl overflow-hidden border-2 transition-all hover:scale-105 ${idx === 0 ? "border-brand-gold" : "border-slate-100 hover:border-slate-200"}`}
                                                        >
                                                            <img
                                                                src={img}
                                                                alt={`${product.name} ${idx + 1}`}
                                                                class="w-full h-full object-cover"
                                                            />
                                                        </button>
                                                    ),
                                                )}
                                            </div>
                                        )}
                                    </div>
                                ) : (
                                    <div class="aspect-square bg-slate-50 rounded-3xl flex items-center justify-center border border-dashed border-slate-200">
                                        <svg
                                            class="w-20 h-20 text-slate-200"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="1.5"
                                                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                                            />
                                        </svg>
                                    </div>
                                )
                            }
                        </div>

                        <!-- Información del producto -->
                        <div class="space-y-8">
                            <div>
                                <h1
                                    class="text-4xl font-serif font-bold text-slate-900 mb-2 leading-tight"
                                >
                                    {product.name}
                                </h1>
                                <a
                                    href={`/${product.categories.slug}`}
                                    class="text-xs font-black uppercase tracking-widest text-brand-gold hover:text-slate-900 transition-colors"
                                >
                                    {product.categories.name}
                                </a>
                            </div>

                            <div class="flex items-center gap-6">
                                {
                                    hasActiveDiscount ? (
                                        <div class="flex flex-col">
                                            <span class="text-sm text-slate-400 line-through font-medium">
                                                {formatPrice(product.price)}
                                            </span>
                                            <div class="flex items-center gap-3">
                                                <span class="text-4xl font-black text-red-600">
                                                    {formatPrice(finalPrice)}
                                                </span>
                                                <span class="bg-red-600 text-white px-3 py-1 text-[10px] font-black rounded-lg uppercase tracking-widest">
                                                    -
                                                    {
                                                        product.discount_percentage
                                                    }
                                                    %
                                                </span>
                                            </div>
                                        </div>
                                    ) : (
                                        <span class="text-4xl font-black text-slate-900">
                                            {formatPrice(product.price)}
                                        </span>
                                    )
                                }
                                <span
                                    class={`px-4 py-1.5 rounded-full text-[10px] font-black uppercase tracking-widest ${stockInfo.class}`}
                                >
                                    {stockInfo.label}
                                </span>
                            </div>

                            <!-- Botones de acción -->
                            <div
                                class="pt-8 border-t border-slate-100 space-y-4"
                            >
                                {
                                    stockInfo.available ? (
                                        <>
                                            <div class="flex justify-end">
                                                <SizeRecommender
                                                    client:load
                                                    categorySlug={
                                                        product.categories.slug
                                                    }
                                                />
                                            </div>
                                            <AddToCartButton
                                                client:load
                                                productId={product.id.toString()}
                                                productName={product.name}
                                                productPrice={finalPrice}
                                                originalPrice={
                                                    hasActiveDiscount
                                                        ? product.price
                                                        : undefined
                                                }
                                                productImage={
                                                    product.images?.[0] || ""
                                                }
                                                variants={variants || []}
                                            />

                                            <div class="grid grid-cols-2 gap-4 mt-2 relative z-10">
                                                <FavoriteButton
                                                    client:load
                                                    productId={product.id.toString()}
                                                />

                                                <ProductInquiryForm
                                                    client:load
                                                    productId={product.id.toString()}
                                                    productName={product.name}
                                                />
                                            </div>
                                        </>
                                    ) : (
                                        <button
                                            disabled
                                            class="w-full bg-slate-100 text-slate-400 py-4 px-6 rounded-2xl font-black uppercase tracking-widest cursor-not-allowed"
                                        >
                                            Producto agotado
                                        </button>
                                    )
                                }
                            </div>

                            {
                                product.description && (
                                    <div class="pt-8 border-t border-slate-100">
                                        <h2 class="text-sm font-black uppercase tracking-widest text-slate-900 mb-4">
                                            Descripción
                                        </h2>
                                        <p class="text-slate-600 leading-relaxed whitespace-pre-line text-sm font-medium">
                                            {product.description}
                                        </p>
                                    </div>
                                )
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ayuda al final en móvil -->
            <div class="mt-12 lg:hidden">
                <SupportBanner />
            </div>

            <!-- Ayuda siempre visible en desktop -->
            <div
                class="hidden lg:block mt-12 bg-white rounded-3xl p-1 border border-slate-100"
            >
                <SupportBanner />
            </div>
        </div>
    </div>
</BaseLayout>

<script>
    // Cambiar imagen principal
    document.querySelectorAll(".thumbnail").forEach((thumb) => {
        thumb.addEventListener("click", (e) => {
            const btn = e.currentTarget as HTMLButtonElement;
            const imageUrl = btn.dataset.image;
            const mainImage = document.getElementById(
                "main-image",
            ) as HTMLImageElement;

            if (imageUrl && mainImage) {
                mainImage.src = imageUrl;

                document.querySelectorAll(".thumbnail").forEach((t) => {
                    t.classList.remove("border-brand-gold");
                    t.classList.add("border-gray-300");
                });
                btn.classList.add("border-brand-gold");
                btn.classList.remove("border-gray-300");
            }
        });
    });
</script>
