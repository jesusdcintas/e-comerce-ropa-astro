---
import BaseLayout from "../layouts/BaseLayout.astro";
import { supabase } from "../lib/supabase";

let message = "";
let isError = false;

if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const email = formData.get("email")?.toString();

        if (!email) throw new Error("El email es obligatorio");

        const { error } = await supabase.auth.resetPasswordForEmail(email, {
            redirectTo: `${Astro.site}reset-password`,
        });

        if (error) throw error;

        message = "Se ha enviado un correo de recuperación a tu dirección.";
        isError = false;
    } catch (error: any) {
        message = error.message;
        isError = true;
    }
}
---

<BaseLayout title="Recuperar Acceso - FashionStore" showPopup={false}>
    <div
        class="min-h-[70vh] flex items-center justify-center p-4 bg-gray-50/50"
    >
        <div class="w-full max-w-md">
            <div
                class="bg-white rounded-[2.5rem] shadow-2xl shadow-slate-200/50 border border-slate-100 overflow-hidden transform transition-all"
            >
                <div class="p-10">
                    <div class="text-center mb-10">
                        <div
                            class="w-20 h-20 bg-brand-black rounded-3xl flex items-center justify-center mx-auto mb-6 shadow-xl rotate-3 group overflow-hidden relative"
                        >
                            <div
                                class="absolute inset-0 bg-gradient-to-tr from-brand-gold/20 to-transparent"
                            >
                            </div>
                            <svg
                                class="w-10 h-10 text-brand-gold relative z-10"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"
                                ></path>
                            </svg>
                        </div>
                        <h1
                            class="text-3xl font-serif font-bold text-gray-900 tracking-tight"
                        >
                            Recuperar Acceso
                        </h1>
                        <p class="text-slate-500 mt-2 font-medium">
                            Te enviaremos un enlace seguro para resetear tu
                            clave.
                        </p>
                    </div>

                    {
                        message && (
                            <div
                                class={`mb-8 p-4 rounded-2xl text-sm font-bold flex items-center gap-3 animate-in zoom-in-95 duration-300 ${isError ? "bg-red-50 text-red-600 border border-red-100" : "bg-green-50 text-green-600 border border-green-100"}`}
                            >
                                <span class="text-xl">
                                    {isError ? "!" : "✓"}
                                </span>
                                <p>{message}</p>
                            </div>
                        )
                    }

                    <form method="POST" class="space-y-6">
                        <div class="space-y-2">
                            <label
                                for="email"
                                class="text-[10px] font-black uppercase tracking-widest text-slate-400 ml-1"
                                >Email Registrado</label
                            >
                            <input
                                type="email"
                                name="email"
                                id="email"
                                required
                                class="w-full bg-slate-50 border border-slate-100 focus:bg-white focus:ring-4 focus:ring-brand-gold/10 focus:border-brand-gold rounded-2xl py-4 px-6 text-slate-700 font-bold transition-all outline-none"
                                placeholder="tu@email.com"
                            />
                        </div>

                        <button
                            type="submit"
                            class="w-full bg-brand-black text-white rounded-2xl py-4 font-bold shadow-xl shadow-brand-black/20 hover:bg-gray-800 hover:-translate-y-1 transition-all active:scale-95 flex items-center justify-center gap-2"
                        >
                            <span>Enviar Enlace</span>
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                            </svg>
                        </button>
                    </form>

                    <div class="mt-8 text-center">
                        <a
                            href="/login"
                            class="text-sm font-semibold text-brand-blue hover:text-blue-700 transition-colors flex items-center justify-center gap-2"
                        >
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Volver al inicio de sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
