---
import BaseLayout from "../layouts/BaseLayout.astro";
import { supabase } from "../lib/supabase";

// Si ya está logueado, redirigir
const accessToken = Astro.cookies.get("sb-access-token")?.value;
const redirect = Astro.url.searchParams.get("redirect");

if (accessToken) {
  try {
    const {
      data: { user },
    } = await supabase.auth.getUser(accessToken);
    if (user) {
      const role = user.app_metadata?.role || user.user_metadata?.role;
      if (role === "admin") {
        return Astro.redirect("/admin");
      } else {
        return Astro.redirect(redirect || "/");
      }
    }
  } catch (error) {
    // Token inválido, continuar con registro
  }
}
---

<BaseLayout title="Registro - FashionStore" showPopup={false}>
  <div
    class="min-h-[80vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 mt-10"
  >
    <div class="max-w-md w-full space-y-12">
      <div class="text-center">
        <div
          class="flex items-center justify-center gap-2 text-[10px] font-black uppercase tracking-[0.3em] text-brand-gold mb-6"
        >
          <span class="w-8 h-px bg-brand-gold"></span>
          Únete a Nosotros
          <span class="w-8 h-px bg-brand-gold"></span>
        </div>
        <h2 class="text-6xl font-black text-slate-800 tracking-tighter mb-4">
          Fashion<span class="text-brand-gold italic font-serif">Store</span>
        </h2>
        <p class="text-slate-400 font-medium text-lg">
          Crea tu cuenta para empezar a comprar
        </p>
      </div>

      <form
        class="mt-10 space-y-6 bg-white p-10 rounded-[2.5rem] shadow-2xl shadow-slate-200/50 border border-slate-50"
        id="register-form"
      >
        <input type="hidden" id="redirect-url" value={redirect} />
        <div class="space-y-4">
          <div class="space-y-2">
            <label
              for="name"
              class="text-[10px] font-black uppercase tracking-widest text-slate-400 ml-4"
              >Nombre Completo</label
            >
            <input
              id="name"
              name="name"
              type="text"
              required
              class="w-full bg-slate-50 border-transparent focus:bg-white focus:ring-2 focus:ring-brand-gold/20 focus:border-brand-gold rounded-2xl py-4 px-6 text-slate-700 font-medium transition-all shadow-inner"
              placeholder="Ej: Juan Pérez"
            />
          </div>
          <div class="space-y-2">
            <label
              for="email"
              class="text-[10px] font-black uppercase tracking-widest text-slate-400 ml-4"
              >Tu Email</label
            >
            <input
              id="email"
              name="email"
              type="email"
              autocomplete="email"
              required
              class="w-full bg-slate-50 border-transparent focus:bg-white focus:ring-2 focus:ring-brand-gold/20 focus:border-brand-gold rounded-2xl py-4 px-6 text-slate-700 font-medium transition-all shadow-inner"
              placeholder="tu@email.com"
            />
          </div>
          <div class="space-y-2">
            <label
              for="password"
              class="text-[10px] font-black uppercase tracking-widest text-slate-400 ml-4"
              >Contraseña</label
            >
            <input
              id="password"
              name="password"
              type="password"
              autocomplete="new-password"
              required
              minlength="6"
              class="w-full bg-slate-50 border-transparent focus:bg-white focus:ring-2 focus:ring-brand-gold/20 focus:border-brand-gold rounded-2xl py-4 px-6 text-slate-700 font-medium transition-all shadow-inner"
              placeholder="Mínimo 6 caracteres"
            />
          </div>
          <div class="space-y-2">
            <label
              for="confirm-password"
              class="text-[10px] font-black uppercase tracking-widest text-slate-400 ml-4"
              >Confirmar Contraseña</label
            >
            <input
              id="confirm-password"
              name="confirm-password"
              type="password"
              autocomplete="new-password"
              required
              minlength="6"
              class="w-full bg-slate-50 border-transparent focus:bg-white focus:ring-2 focus:ring-brand-gold/20 focus:border-brand-gold rounded-2xl py-4 px-6 text-slate-700 font-medium transition-all shadow-inner"
              placeholder="Repite tu contraseña"
            />
          </div>
        </div>

        <div
          id="error-msg"
          class="text-red-500 text-[10px] font-black uppercase tracking-widest text-center hidden bg-red-50 py-3 rounded-xl border border-red-100"
        >
        </div>
        <div
          id="success-msg"
          class="text-green-600 text-[10px] font-black uppercase tracking-widest text-center hidden bg-green-50 py-3 rounded-xl border border-green-100"
        >
        </div>

        <div class="pt-2">
          <button
            type="submit"
            class="group relative w-full flex justify-center py-4 px-4 bg-slate-900 text-white rounded-2xl text-xs font-black uppercase tracking-widest hover:bg-brand-gold hover:-translate-y-1 transition-all shadow-xl shadow-slate-900/10 active:scale-95"
          >
            UNIRME AHORA
          </button>
        </div>

        <div class="text-center pt-6">
          <p
            class="text-[11px] font-bold text-slate-400 uppercase tracking-widest"
          >
            ¿Ya tienes cuenta?
            <a
              href={redirect ? `/login?redirect=${redirect}` : "/login"}
              class="text-brand-gold hover:text-slate-800 transition-colors border-b border-brand-gold/30 ml-1"
            >
              Inicia sesión
            </a>
          </p>
        </div>
      </form>
    </div>
  </div>
</BaseLayout>

<script>
  import { supabase } from "../lib/supabase";

  const form = document.getElementById("register-form") as HTMLFormElement;
  const errorMsg = document.getElementById("error-msg")!;
  const successMsg = document.getElementById("success-msg")!;
  const redirectInput = document.getElementById(
    "redirect-url",
  ) as HTMLInputElement;

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    errorMsg.classList.add("hidden");
    successMsg.classList.add("hidden");

    const formData = new FormData(form);
    const name = formData.get("name") as string;
    const email = formData.get("email") as string;
    const password = formData.get("password") as string;
    const confirmPassword = formData.get("confirm-password") as string;
    const redirectTo = redirectInput?.value || "/";

    // Validar que las contraseñas coincidan
    if (password !== confirmPassword) {
      errorMsg.textContent = "Las contraseñas no coinciden";
      errorMsg.classList.remove("hidden");
      return;
    }

    // Registrar usuario con rol de cliente
    const { data, error } = await supabase.auth.signUp({
      email,
      password,
      options: {
        data: {
          name,
          role: "customer",
        },
      },
    });

    if (error) {
      errorMsg.textContent = error.message || "Error al crear la cuenta";
      errorMsg.classList.remove("hidden");
    } else if (data.user) {
      // Guardar tokens en cookies
      const accessToken = data.session?.access_token;
      const refreshToken = data.session?.refresh_token;

      if (accessToken) {
        document.cookie = `sb-access-token=${accessToken}; path=/; max-age=604800; SameSite=Lax`;
        sessionStorage.setItem("just_logged_in", "true");
      }
      if (refreshToken) {
        document.cookie = `sb-refresh-token=${refreshToken}; path=/; max-age=604800; SameSite=Lax`;
      }

      // Sincronizar pedidos de invitado anteriores al crear la cuenta
      try {
        await fetch("/api/auth/sync-guest-orders", { method: "POST" });
      } catch (e) {
        console.error("Error sincronizando pedidos post-registro:", e);
      }

      // Redirigir directamente
      successMsg.textContent = "¡Cuenta creada con éxito! Redirigiendo...";
      successMsg.classList.remove("hidden");

      setTimeout(() => {
        window.location.href = redirectTo;
      }, 1500);
    }
  });
</script>
