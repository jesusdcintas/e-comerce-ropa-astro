<script>
    import { supabase } from "../lib/supabase";

    let activeInquiryId: number | null = null;
    const modal = document.getElementById('reply-modal');
    const textarea = document.getElementById('customer-reply-text') as HTMLTextAreaElement;

    // @ts-ignore
    window.replyToInquiry = (id: number) => {
        activeInquiryId = id;
        if (modal) {
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            textarea?.focus();
        }
    };

    function closeModal() {
        if (modal) {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            if (textarea) textarea.value = '';
            activeInquiryId = null;
        }
    }

    document.getElementById('close-modal')?.addEventListener('click', closeModal);
    document.getElementById('cancel-reply')?.addEventListener('click', closeModal);
    document.getElementById('reply-modal')?.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
    });

    document.getElementById('submit-reply')?.addEventListener('click', async () => {
        if (!activeInquiryId || !textarea.value.trim()) return;

        const response = textarea.value.trim();
        const submitBtn = document.getElementById('submit-reply') as HTMLButtonElement;
        
        try {
            submitBtn.disabled = true;
            submitBtn.textContent = 'Enviando...';

            const { error: msgError } = await supabase
                .from("inquiry_messages")
                .insert({
                    inquiry_id: activeInquiryId,
                    sender_role: 'customer',
                    message: response
                });

            if (msgError) throw msgError;

            // Volver a poner en pendiente para que el admin lo vea y marcar como le√≠da para el cliente
            await supabase
                .from("product_inquiries")
                .update({ 
                    status: 'pending',
                    customer_has_unread: false 
                })
                .eq("id", activeInquiryId);

            // Notificar al admin por email (sin esperar para no bloquear)
            fetch('/api/inquiry-notification', {
                method: 'POST',
                body: JSON.stringify({
                    inquiryId: activeInquiryId,
                    message: response,
                    type: 'to_admin'
                })
            }).catch(err => console.error("Email notification failed:", err));

            location.reload();
        } catch (error: any) {
            alert("Error al enviar el mensaje: " + error.message);
            submitBtn.disabled = false;
            submitBtn.textContent = 'Enviar Mensaje';
        }
    });
</script>

