---
import BaseLayout from "../layouts/BaseLayout.astro";
import { supabase } from "../lib/supabase";
import GeneralInquiryForm from "../components/islands/GeneralInquiryForm";

const accessToken = Astro.cookies.get("sb-access-token")?.value;
let user = null;

if (!accessToken) {
    return Astro.redirect("/login");
}

const { data } = await supabase.auth.getUser(accessToken);
if (data?.user) {
    user = data.user;
} else {
    return Astro.redirect("/login");
}

const userEmail = user.email || "";

// Obtener consultas del usuario con sus mensajes
const { data: userInquiries } = await supabase
    .from("inquiries_with_product")
    .select("*, messages:inquiry_messages(*)")
    .eq("customer_email", userEmail)
    .order("created_at", { ascending: false });

// Ordenar mensajes por fecha ascendente
userInquiries?.forEach((inquiry) => {
    if (inquiry.messages) {
        inquiry.messages.sort(
            (a: any, b: any) =>
                new Date(a.created_at).getTime() - new Date(b.created_at).getTime(),
        );
    }
});

// Marcar como le√≠das usando privilegios de admin para evitar bloqueos por RLS
const { createClient } = await import('@supabase/supabase-js');
const supabaseAdmin = createClient(
    import.meta.env.PUBLIC_SUPABASE_URL,
    import.meta.env.SUPABASE_SERVICE_ROLE_KEY
);

await supabaseAdmin
    .from("product_inquiries")
    .update({ customer_has_unread: false })
    .eq("customer_email", userEmail);
