                                                {inquiry.product_name}
                                            </h3>
                                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                                                Consulta #{inquiry.id.toString().padStart(4, '0')}
                                            </p>
                                        </div>
                                        <div class={`px-4 py-2 rounded-2xl border text-[10px] font-black uppercase tracking-widest flex items-center gap-2 ${
                                            inquiry.status === 'pending' ? 'bg-orange-50 text-orange-600 border-orange-100' :
                                            inquiry.status === 'answered' ? 'bg-green-50 text-green-600 border-green-100' :
                                            'bg-slate-50 text-slate-600 border-slate-100'
                                        }`}>
                                            <div class={`w-2 h-2 rounded-full bg-current ${inquiry.status === 'pending' ? 'animate-pulse' : ''}`}></div>
                                            {inquiry.status === 'pending' ? 'Esperando Respuesta' : inquiry.status === 'answered' ? 'Respondida' : 'Cerrada'}
                                        </div>
                                    </div>

                                    <!-- Hilo de Mensajes Estilo Chat -->
                                    <div class="bg-slate-50/50 rounded-[2rem] p-6 border border-slate-100 space-y-4 max-h-[400px] overflow-y-auto custom-scrollbar">
                                        {inquiry.messages?.map((msg: any) => (
                                            <div class={`flex flex-col ${msg.sender_role === 'admin' ? 'items-start' : 'items-end'}`}>
                                                <div class={`max-w-[85%] px-5 py-3 rounded-[1.5rem] text-sm font-medium shadow-sm ${
                                                    msg.sender_role === 'admin' 
                                                    ? 'bg-slate-900 text-white rounded-tl-none' 
                                                    : 'bg-white text-slate-700 border border-slate-100 rounded-tr-none'
                                                }`}>
                                                    {msg.message}
                                                    <div class="text-[8px] mt-2 opacity-60 font-black uppercase tracking-widest">
                                                        {msg.sender_role === 'admin' ? 'FashionStore Team' : 'T√∫'} ‚Ä¢ {new Date(msg.created_at).toLocaleDateString()}
                                                    </div>
                                                </div>
                                            </div>
                                        ))}
                                    </div>

                                    <div class="pt-4 flex justify-end">
                                        <button 
                                            class="bg-brand-black text-white px-6 py-3 rounded-xl text-xs font-black uppercase tracking-widest hover:bg-brand-blue transition-all flex items-center gap-2 shadow-lg shadow-slate-200"
                                            onclick={`window.replyToInquiry(${inquiry.id})`}
                                        >
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
                                            </svg>
                                            Enviar Mensaje
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                ))
            )}
        </div>
    </div>
</BaseLayout>

<script>
    import { supabase } from "../lib/supabase";

    // @ts-ignore
    window.replyToInquiry = async (id: number) => {
        const response = prompt("¬øQu√© quieres decirle al equipo de soporte?");
        if (!response) return;

        try {
            const { error: msgError } = await supabase
                .from("inquiry_messages")
                .insert({
                    inquiry_id: id,
                    sender_role: 'customer',
                    message: response
                });

            if (msgError) throw msgError;

            // Volver a poner en pendiente para que el admin lo vea
            await supabase
                .from("product_inquiries")
                .update({ status: 'pending' })
                .eq("id", id);

            location.reload();
        } catch (error: any) {
            alert("Error al enviar el mensaje: " + error.message);
        }
    };
</script>

