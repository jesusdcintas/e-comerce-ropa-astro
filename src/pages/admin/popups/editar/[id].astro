---
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import { supabase } from "../../../../lib/supabase";
import ImageUploader from "../../../../components/functional/ImageUploader";

const { id } = Astro.params;

const accessToken = Astro.cookies.get("sb-access-token")?.value;
if (!accessToken) return Astro.redirect("/login");

const {
    data: { user },
} = await supabase.auth.getUser(accessToken);
if (!user || user.app_metadata?.role !== "admin") return Astro.redirect("/");

// Obtener el pop-up actual
const { data: popup, error: popupError } = await supabase
    .from("popups")
    .select("*")
    .eq("id", id)
    .single();

if (popupError || !popup) return Astro.redirect("/admin/popups");

// Obtener cupones activos para el selector
const { data: cupones } = await supabase
    .from("cupones")
    .select("codigo, descuento_porcentaje")
    .eq("activo", true)
    .order("codigo");
---

<AdminLayout title={`Editar Pop-up: ${popup.titulo}`}>
    <div class="max-w-4xl mx-auto space-y-12">
        <header class="flex justify-between items-center">
            <a
                href="/admin/popups"
                class="text-slate-400 hover:text-slate-800 flex items-center gap-2 font-bold text-sm transition-colors"
            >
                <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Volver a Pop-ups
            </a>
            <h1 class="text-2xl font-black text-slate-800 tracking-tighter">
                Editar <span class="text-brand-gold italic font-serif"
                    >Pop-up</span
                >
            </h1>
        </header>

        <form
            id="edit-popup-form"
            class="grid grid-cols-1 md:grid-cols-2 gap-8"
        >
            <input type="hidden" name="id" value={popup.id} />

            <!-- Información Básica -->
            <div
                class="bg-white p-8 rounded-3xl border border-slate-100 shadow-xl space-y-6"
            >
                <h2
                    class="text-xl font-black text-slate-800 flex items-center gap-2"
                >
                    <span
                        class="w-8 h-8 rounded-lg bg-brand-gold/10 text-brand-gold flex items-center justify-center text-sm"
                        >1</span
                    >
                    Contenido & Diseño
                </h2>

                <div class="space-y-4 text-sm font-medium">
                    <div>
                        <label
                            class="block text-slate-400 text-[10px] font-bold uppercase tracking-widest mb-2"
                            >Título del Pop-up</label
                        >
                        <input
                            name="titulo"
                            type="text"
                            value={popup.titulo}
                            required
                            class="w-full px-4 py-3 bg-slate-50 border border-slate-100 rounded-xl focus:ring-2 focus:ring-brand-gold/20 outline-none font-bold"
                        />
                    </div>

                    <div>
                        <label
                            class="block text-slate-400 text-[10px] font-bold uppercase tracking-widest mb-2"
                            >Contenido / Mensaje</label
                        >
                        <textarea
                            name="contenido"
                            rows="3"
                            class="w-full px-4 py-3 bg-slate-50 border border-slate-100 rounded-xl focus:ring-2 focus:ring-brand-gold/20 outline-none resize-none"
                            >{popup.contenido}</textarea
                        >
                    </div>

                    <div>
                        <label
                            class="block text-slate-400 text-[10px] font-bold uppercase tracking-widest mb-2"
                            >Imagen de la Campaña</label
                        >
                        <div
                            class="bg-slate-50 p-6 rounded-2xl border border-dashed border-slate-200"
                        >
                            <input
                                type="hidden"
                                name="imagen_url"
                                id="image_url"
                                value={popup.imagen_url}
                            />
                            <ImageUploader
                                client:load
                                initialImage={popup.imagen_url}
                            />
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label
                                class="block text-slate-400 text-[10px] font-bold uppercase tracking-widest mb-2"
                                >Color Fondo</label
                            >
                            <input
                                name="color_fondo"
                                type="color"
                                value={popup.configuracion?.color_fondo ||
                                    "#ffffff"}
                                class="w-full h-12 p-1 bg-slate-50 border border-slate-100 rounded-xl cursor-pointer"
                            />
                        </div>
                        <div>
                            <label
                                class="block text-slate-400 text-[10px] font-bold uppercase tracking-widest mb-2"
                                >Color Texto</label
                            >
                            <input
                                name="color_texto"
                                type="color"
                                value={popup.configuracion?.color_texto ||
                                    "#1e293b"}
                                class="w-full h-12 p-1 bg-slate-50 border border-slate-100 rounded-xl cursor-pointer"
                            />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acción y Programación -->
            <div class="space-y-8">
                <div
                    class="bg-slate-900 p-8 rounded-3xl border border-slate-800 shadow-xl space-y-6 text-white"
                >
                    <h2 class="text-xl font-black flex items-center gap-2">
                        <span
                            class="w-8 h-8 rounded-lg bg-brand-gold text-white flex items-center justify-center text-sm"
                            >2</span
                        >
                        Acción & Trigger
                    </h2>

                    <div class="space-y-4 text-sm font-medium">
                        <div>
                            <label
                                class="block text-slate-500 text-[10px] font-bold uppercase tracking-widest mb-2"
                                >Tipo de Acción</label
                            >
                            <select
                                id="action-type"
                                name="tipo_accion"
                                class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-xl text-white outline-none focus:ring-2 focus:ring-brand-gold"
                            >
                                <option
                                    value="enlace"
                                    selected={popup.tipo_accion === "enlace"}
                                    >Redirigir a URL</option
                                >
                                <option
                                    value="cupon"
                                    selected={popup.tipo_accion === "cupon"}
                                    >Mostrar Cupón</option
                                >
                                <option
                                    value="aviso"
                                    selected={popup.tipo_accion === "aviso"}
                                    >Solo Información</option
                                >
                            </select>
                        </div>

                        <div
                            id="url-container"
                            class={popup.tipo_accion !== "enlace"
                                ? "hidden"
                                : ""}
                        >
                            <label
                                class="block text-slate-500 text-[10px] font-bold uppercase tracking-widest mb-2"
                                >URL de Destino</label
                            >
                            <input
                                name="valor_accion_url"
                                type="text"
                                value={popup.tipo_accion === "enlace"
                                    ? popup.valor_accion
                                    : "/"}
                                class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-xl text-white outline-none focus:ring-2 focus:ring-brand-gold"
                            />
                        </div>

                        <div
                            id="coupon-container"
                            class={popup.tipo_accion !== "cupon"
                                ? "hidden"
                                : ""}
                        >
                            <label
                                class="block text-slate-500 text-[10px] font-bold uppercase tracking-widest mb-2"
                                >Seleccionar Cupón</label
                            >
                            <select
                                name="valor_accion_cupon"
                                class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-xl text-white outline-none focus:ring-2 focus:ring-brand-gold"
                            >
                                <option value="">-- Seleccionar --</option>
                                {
                                    cupones?.map((c: any) => (
                                        <option
                                            value={c.codigo}
                                            selected={
                                                popup.tipo_accion === "cupon" &&
                                                popup.valor_accion === c.codigo
                                            }
                                        >
                                            {c.codigo} ({c.descuento_porcentaje}
                                            %)
                                        </option>
                                    ))
                                }
                            </select>
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label
                                    class="block text-slate-500 text-[10px] font-bold uppercase tracking-widest mb-2"
                                    >Delay (Seg)</label
                                >
                                <input
                                    name="delay"
                                    type="number"
                                    value={popup.configuracion
                                        ?.delay_segundos || 2}
                                    min="0"
                                    class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-xl text-white outline-none focus:ring-2 focus:ring-brand-gold"
                                />
                            </div>
                            <div class="flex items-end">
                                <label
                                    class="flex items-center gap-2 cursor-pointer p-3 bg-slate-800 border border-slate-700 rounded-xl hover:bg-slate-700 transition-colors w-full"
                                >
                                    <input
                                        type="checkbox"
                                        name="once"
                                        checked={popup.configuracion
                                            ?.mostrar_una_vez}
                                        class="w-4 h-4 rounded border-slate-600 bg-slate-900 text-brand-gold focus:ring-brand-gold"
                                    />
                                    <span
                                        class="text-[10px] font-bold uppercase tracking-widest"
                                        >Mostrar una vez</span
                                    >
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div
                    class="bg-white p-8 rounded-3xl border border-slate-100 shadow-xl space-y-6"
                >
                    <h2
                        class="text-xl font-black text-slate-800 flex items-center gap-2"
                    >
                        <span
                            class="w-8 h-8 rounded-lg bg-brand-gold/10 text-brand-gold flex items-center justify-center text-sm"
                            >3</span
                        >
                        Programación
                    </h2>

                    <div class="grid grid-cols-2 gap-4 text-sm font-medium">
                        <div>
                            <label
                                class="block text-slate-400 text-[10px] font-bold uppercase tracking-widest mb-2"
                                >Fecha Inicio</label
                            >
                            <input
                                name="fecha_inicio"
                                type="datetime-local"
                                value={new Date(popup.fecha_inicio)
                                    .toISOString()
                                    .slice(0, 16)}
                                class="w-full px-4 py-3 bg-slate-50 border border-slate-100 rounded-xl focus:ring-2 focus:ring-brand-gold/20 outline-none"
                            />
                        </div>
                        <div>
                            <label
                                class="block text-slate-400 text-[10px] font-bold uppercase tracking-widest mb-2"
                                >Fecha Fin (Opc)</label
                            >
                            <input
                                name="fecha_fin"
                                type="datetime-local"
                                value={popup.fecha_fin
                                    ? new Date(popup.fecha_fin)
                                          .toISOString()
                                          .slice(0, 16)
                                    : ""}
                                class="w-full px-4 py-3 bg-slate-50 border border-slate-100 rounded-xl focus:ring-2 focus:ring-brand-gold/20 outline-none"
                            />
                        </div>
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-brand-gold text-white py-4 rounded-2xl font-black uppercase tracking-widest hover:bg-yellow-600 transition-all shadow-xl shadow-brand-gold/20 flex items-center justify-center gap-3"
                    >
                        Actualizar Campaña
                    </button>
                </div>
            </div>
        </form>
    </div>

    <script>
        import { showModal } from "../../../../stores/modalStore";

        const form = document.getElementById(
            "edit-popup-form",
        ) as HTMLFormElement;
        const actionType = document.getElementById("action-type");
        const urlContainer = document.getElementById("url-container");
        const couponContainer = document.getElementById("coupon-container");

        actionType?.addEventListener("change", (e) => {
            const val = (e.target as HTMLSelectElement).value;
            urlContainer?.classList.toggle("hidden", val !== "enlace");
            couponContainer?.classList.toggle("hidden", val !== "cupon");
        });

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();
            const formData = new FormData(form);

            const action = formData.get("tipo_accion") as string;
            const valor_accion =
                action === "enlace"
                    ? (formData.get("valor_accion_url") as string)
                    : action === "cupon"
                      ? (formData.get("valor_accion_cupon") as string)
                      : "";

            const data = {
                titulo: formData.get("titulo") as string,
                contenido: formData.get("contenido") as string,
                imagen_url: formData.get("imagen_url") as string,
                tipo_accion: action,
                valor_accion,
                fecha_inicio: formData.get("fecha_inicio") as string,
                fecha_fin: (formData.get("fecha_fin") as string) || null,
                configuracion: {
                    color_fondo: formData.get("color_fondo") as string,
                    color_texto: formData.get("color_texto") as string,
                    delay_segundos: parseInt(formData.get("delay") as string),
                    mostrar_una_vez: formData.get("once") === "on",
                },
            };

            try {
                const res = await fetch("/api/admin/popups", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        action: "update",
                        id: formData.get("id"),
                        data,
                    }),
                });

                if (res.ok) {
                    showModal({
                        title: "¡Éxito!",
                        message: "¡Pop-up actualizado con éxito!",
                        type: "info",
                        onConfirm: () => {
                            window.location.href = "/admin/popups";
                        },
                    });
                } else {
                    const err = await res.json();
                    showModal({
                        title: "Error",
                        message:
                            "No se pudo actualizar el pop-up: " + err.error,
                        type: "alert",
                    });
                }
            } catch (err) {
                showModal({
                    title: "Error de Conexión",
                    message: "Hubo un problema al conectar con el servidor.",
                    type: "alert",
                });
            }
        });
    </script>
</AdminLayout>
