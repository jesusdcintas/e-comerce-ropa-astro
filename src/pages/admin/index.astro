---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";

const accessToken = Astro.cookies.get("sb-access-token")?.value;

if (!accessToken) {
    return Astro.redirect("/login");
}

const {
    data: { user },
} = await supabase.auth.getUser(accessToken);

if (!user || user.app_metadata?.role !== "admin") {
    return Astro.redirect("/");
}

// --- Lógica de Inteligencia de Negocio ---
const now = new Date();
const oneWeekAgo = new Date(
    now.getTime() - 7 * 24 * 60 * 60 * 1000,
).toISOString();
const oneMonthAgo = new Date(
    now.getFullYear(),
    now.getMonth() - 1,
    now.getDate(),
).toISOString();
const sixMonthsAgo = new Date(
    now.getFullYear(),
    now.getMonth() - 6,
    now.getDate(),
).toISOString();
const oneYearAgo = new Date(
    now.getFullYear() - 1,
    now.getMonth(),
    now.getDate(),
).toISOString();

// 1. Ingresos Totales y por Periodos
const { data: allSales } = await supabase
    .from("orders")
    .select("total_amount, created_at")
    .neq("status", "cancelled");

const calculateSales = (sinceIso?: string) => {
    if (!allSales) return 0;
    return (
        allSales
            .filter((order) => !sinceIso || order.created_at >= sinceIso)
            .reduce((acc, curr) => acc + curr.total_amount, 0) / 100
    );
};

const totalSales = calculateSales();
const weekSales = calculateSales(oneWeekAgo);
const monthSales = calculateSales(oneMonthAgo);
const halfYearSales = calculateSales(sixMonthsAgo);
const yearSales = calculateSales(oneYearAgo);

// 2. Conteo de Pedidos
const { count: ordersCount } = await supabase
    .from("orders")
    .select("*", { count: "exact", head: true });

// 3. Stock y Variantes
const { data: variantsData } = await supabase
    .from("product_variants")
    .select("stock");

const stockStats = {
    totalUnits: variantsData?.reduce((acc, v) => acc + v.stock, 0) || 0,
    lowStock:
        variantsData?.filter((v) => v.stock < 3 && v.stock > 0).length || 0,
    outOfStock: variantsData?.filter((v) => v.stock === 0).length || 0,
};

// 4. Catálogo de Productos
const { count: productsCount } = await supabase
    .from("products")
    .select("*", { count: "exact", head: true });

// 5. Pedidos Recientes
const { data: recentOrders } = await supabase
    .from("orders")
    .select("*")
    .order("created_at", { ascending: false })
    .limit(5);

const statusBadge: Record<string, string> = {
    pending: "bg-orange-50 text-orange-600",
    paid: "bg-green-50 text-green-600",
    shipped: "bg-blue-50 text-blue-600",
    delivered: "bg-purple-50 text-purple-600",
    cancelled: "bg-red-50 text-red-600",
};

const statusText: Record<string, string> = {
    pending: "Pendiente",
    paid: "Pagado",
    shipped: "Enviado",
    delivered: "Entregado",
    cancelled: "Cancelado",
};
