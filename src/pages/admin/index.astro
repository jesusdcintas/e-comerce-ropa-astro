---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";

const accessToken = Astro.cookies.get("sb-access-token")?.value;

if (!accessToken) {
    return Astro.redirect("/login");
}

const {
    data: { user },
} = await supabase.auth.getUser(accessToken);

if (!user || user.app_metadata?.role !== "admin") {
    return Astro.redirect("/");
}

// --- Lógica de Inteligencia de Negocio ---
const now = new Date();

// 1. Inicio de Semana (Lunes)
const tempWeek = new Date(now);
const dayOfWeek = tempWeek.getDay();
const diffToMonday =
    tempWeek.getDate() - dayOfWeek + (dayOfWeek === 0 ? -6 : 1);
const startOfWeek = new Date(tempWeek.setDate(diffToMonday));
startOfWeek.setHours(0, 0, 0, 0);

// 2. Inicio de Mes
const startOfMonth = new Date(now.getFullYear(), now.getMonth(), 1, 0, 0, 0, 0);

// 3. Inicio de Semestre (Últimos 6 meses naturales)
const startOfSixMonths = new Date(
    now.getFullYear(),
    now.getMonth() - 5,
    1,
    0,
    0,
    0,
    0,
);

// 4. Inicio de Año (Anual Natural)
const startOfYear = new Date(now.getFullYear(), 0, 1, 0, 0, 0, 0);

const weekIso = startOfWeek.toISOString();
const monthIso = startOfMonth.toISOString();
const sixMonthsIso = startOfSixMonths.toISOString();
const yearIso = startOfYear.toISOString();

// Herramientas de visualización
const monthName = new Intl.DateTimeFormat("es-ES", { month: "long" }).format(
    now,
);
const currentMonthLabel =
    monthName.charAt(0).toUpperCase() + monthName.slice(1);
const currentYear = now.getFullYear();

// 1. Ingresos Totales y por Periodos
const { data: allSales } = await supabase
    .from("orders")
    .select("total_amount, created_at")
    .neq("status", "cancelled");

const calculateSales = (sinceIso?: string) => {
    if (!allSales) return 0;
    return (
        allSales
            .filter((order) => !sinceIso || order.created_at >= sinceIso)
            .reduce((acc, curr) => acc + curr.total_amount, 0) / 100
    );
};

const totalSales = calculateSales();
const weekSales = calculateSales(weekIso);
const monthSales = calculateSales(monthIso);
const halfYearSales = calculateSales(sixMonthsIso);
const yearSales = calculateSales(yearIso);

// 2. Datos para el Gráfico de Tendencia (Ventas diarias este mes)
const { data: trendData } = await supabase
    .from("orders")
    .select("total_amount, created_at")
    .neq("status", "cancelled")
    .gte("created_at", monthIso)
    .order("created_at", { ascending: true });

// Procesar datos para Chart.js
const dailyMap = (trendData || []).reduce(
    (acc: Record<number, number>, curr) => {
        const day = new Date(curr.created_at).getDate();
        acc[day] = (acc[day] || 0) + curr.total_amount / 100;
        return acc;
    },
    {},
);

// Generar etiquetas para todos los días del mes hasta hoy
const daysInMonth = new Date(
    now.getFullYear(),
    now.getMonth() + 1,
    0,
).getDate();
const currentDay = now.getDate();
const labelsChart = Array.from({ length: currentDay }, (_, i) => i + 1);
const dataChart = labelsChart.map((day) => dailyMap[day] || 0);

// 2. Conteo de Pedidos
const { count: ordersCount } = await supabase
    .from("orders")
    .select("*", { count: "exact", head: true });

// 3. Stock y Variantes
const { data: variantsData } = await supabase
    .from("product_variants")
    .select("stock");

const stockStats = {
    totalUnits: variantsData?.reduce((acc, v) => acc + v.stock, 0) || 0,
    lowStock:
        variantsData?.filter((v) => v.stock < 3 && v.stock > 0).length || 0,
    outOfStock: variantsData?.filter((v) => v.stock === 0).length || 0,
};

// 4. Catálogo de Productos
const { count: productsCount } = await supabase
    .from("products")
    .select("*", { count: "exact", head: true });

// 5. Pedidos Recientes
const { data: recentOrders } = await supabase
    .from("orders")
    .select("*")
    .order("created_at", { ascending: false })
    .limit(5);

const statusBadge: Record<string, string> = {
    pending: "bg-orange-50 text-orange-600",
    paid: "bg-green-50 text-green-600",
    shipped: "bg-blue-50 text-blue-600",
    delivered: "bg-purple-50 text-purple-600",
    cancelled: "bg-red-50 text-red-600",
};

const statusText: Record<string, string> = {
    pending: "Pendiente",
    paid: "Pagado",
    shipped: "Enviado",
    delivered: "Entregado",
    cancelled: "Cancelado",
};
