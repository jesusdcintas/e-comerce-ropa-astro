import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";

const accessToken = Astro.cookies.get("sb-access-token")?.value;

if (!accessToken) {
    return Astro.redirect("/login");
}

const {
    data: { user },
} = await supabase.auth.getUser(accessToken);

if (!user || user.app_metadata?.role !== "admin") {
    return Astro.redirect("/");
}

// --- Lógica de Inteligencia de Negocio ---
const now = new Date();

// 1. Inicio de Semana (Lunes)
const tempWeek = new Date(now);
const dayOfWeek = tempWeek.getDay();
const diffToMonday =
    tempWeek.getDate() - dayOfWeek + (dayOfWeek === 0 ? -6 : 1);
const startOfWeek = new Date(tempWeek.setDate(diffToMonday));
startOfWeek.setHours(0, 0, 0, 0);

// 2. Inicio de Mes
const startOfMonth = new Date(now.getFullYear(), now.getMonth(), 1, 0, 0, 0, 0);

// 3. Trimestre Actual
const currentQuarter = Math.floor(now.getMonth() / 3) + 1;
const startMonthOfQuarter = (currentQuarter - 1) * 3;
const startOfQuarter = new Date(
    now.getFullYear(),
    startMonthOfQuarter,
    1,
    0,
    0,
    0,
    0,
);

// 4. Inicio de Año (Anual Natural)
const startOfYear = new Date(now.getFullYear(), 0, 1, 0, 0, 0, 0);

const weekIso = startOfWeek.toISOString();
const monthIso = startOfMonth.toISOString();
const quarterIso = startOfQuarter.toISOString();
const yearIso = startOfYear.toISOString();

// Herramientas de visualización
const monthName = new Intl.DateTimeFormat("es-ES", { month: "long" }).format(
    now,
);
const currentMonthLabel =
    monthName.charAt(0).toUpperCase() + monthName.slice(1);
const currentYear = now.getFullYear();

const quarterLabel = `Trimestre ${currentQuarter} (T${currentQuarter})`;

// 1. Ingresos y Reembolsos Técnicos
// Nota: allSales ahora incluye TODO para cálculos fiscales precisos
const { data: allSalesData } = await supabase
    .from("orders")
    .select("*, order_items(*)");

const calculateNetSales = (sinceIso?: string) => {
    if (!allSalesData) return 0;

    return (
        allSalesData
            .filter((order) => !sinceIso || order.created_at >= sinceIso)
            .reduce((acc, order) => {
                // Si el pedido fue cancelado antes de pagarse, no cuenta.
                // Si fue pagado y luego cancelado, el NETO es 0.
                if (
                    order.status === "cancelled" &&
                    order.payment_status !== "refunded"
                ) {
                    return acc;
                }

                let gross = order.total_amount;

                // Restamos devoluciones procesadas
                const refundedAmount = (order.order_items || []).reduce(
                    (sum: number, item: any) => {
                        return (
                            sum +
                            item.price * (item.return_refunded_quantity || 0)
                        );
                    },
                    0,
                );

                // Si el pedido entero está cancelado/reembolsado
                if (
                    order.payment_status === "refunded" ||
                    order.status === "cancelled"
                ) {
                    return acc; // El ingreso neto de este pedido es 0
                }

                return acc + (gross - refundedAmount);
            }, 0) / 100
    );
};

const totalSales = calculateNetSales();
const weekSales = calculateNetSales(weekIso);
const monthSales = calculateNetSales(monthIso);
const quarterSales = calculateNetSales(quarterIso);
const yearSales = calculateNetSales(yearIso);

// 1.5. Producto Más Vendido (Mes Actual)
const getBestSeller = (sinceIso?: string) => {
    if (!allSalesData) return null;
    const sellers: Record<number, { id: number; name: string; total: number }> =
        {};

    allSalesData
        .filter(
            (order) =>
                (!sinceIso || order.created_at >= sinceIso) &&
                order.status !== "cancelled",
        )
        .forEach((order) => {
            order.order_items?.forEach((item: any) => {
                if (!item.product_id) return;
                if (!sellers[item.product_id]) {
                    sellers[item.product_id] = {
                        id: item.product_id,
                        name: item.product_name,
                        total: 0,
                    };
                }
                sellers[item.product_id].total += item.quantity;
            });
        });

    return Object.values(sellers).sort((a, b) => b.total - a.total)[0] || null;
};

const topSellerBasic = getBestSeller(monthIso);
let bestProduct = null;
if (topSellerBasic) {
    const { data: p } = await supabase
        .from("products")
        .select("images, slug")
        .eq("id", topSellerBasic.id)
        .single();
    if (p) {
        bestProduct = { ...topSellerBasic, ...p };
    }
}

// 2. Datos para el Gráfico de Tendencia (Ventas diarias este mes)
const { data: trendData } = await supabase
    .from("orders")
    .select("total_amount, created_at")
    .neq("status", "cancelled")
    .gte("created_at", monthIso)
    .order("created_at", { ascending: true });

// Procesar datos para Chart.js
const dailyMap = (trendData || []).reduce(
    (acc: Record<number, number>, curr) => {
        const day = new Date(curr.created_at).getDate();
        acc[day] = (acc[day] || 0) + curr.total_amount / 100;
        return acc;
    },
    {},
);

// Generar etiquetas para todos los días del mes hasta hoy
const daysInMonth = new Date(
    now.getFullYear(),
    now.getMonth() + 1,
    0,
).getDate();
const currentDay = now.getDate();
const labelsChart = Array.from({ length: currentDay }, (_, i) => i + 1);
const dataChart = labelsChart.map((day) => dailyMap[day] || 0);

// 2. Conteo de Pedidos
const { count: ordersCount } = await supabase
    .from("orders")
    .select("*", { count: "exact", head: true });

// 3. Stock y Variantes - Agrupado por producto para KPIs reales
const { data: variantsRaw } = await supabase
    .from("product_variants")
    .select("product_id, stock");

const productsStockMap: Record<
    number,
    { low: boolean; out: boolean; total: number }
> = {};
variantsRaw?.forEach((v) => {
    if (!productsStockMap[v.product_id]) {
        productsStockMap[v.product_id] = { low: false, out: false, total: 0 };
    }
    productsStockMap[v.product_id].total += v.stock;
    if (v.stock === 0) productsStockMap[v.product_id].out = true;
    if (v.stock > 0 && v.stock < 3) productsStockMap[v.product_id].low = true;
});

const stockStats = {
    totalUnits: variantsRaw?.reduce((acc, v) => acc + v.stock, 0) || 0,
    lowStock: Object.values(productsStockMap).filter((p) => p.low).length,
    outOfStock: Object.values(productsStockMap).filter((p) => p.out).length,
};

// 4. Catálogo de Productos
const { count: productsCount } = await supabase
    .from("products")
    .select("*", { count: "exact", head: true });

// 5. Actividad Global Reciente
const { data: recentOrders } = await supabase
    .from("orders")
    .select("*")
    .order("created_at", { ascending: false })
    .limit(5);

const { data: recentReturns } = await supabase
    .from("orders")
    .select("*, order_items(*)")
    .neq("return_status", "none")
    .order("updated_at", { ascending: false })
    .limit(5);

const { data: recentCancellations } = await supabase
    .from("orders")
    .select("*")
    .eq("status", "cancelled")
    .order("updated_at", { ascending: false })
    .limit(5);

const statusBadge: Record<string, string> = {
    paid: "bg-green-50 text-green-600",
    processing: "bg-blue-50 text-blue-600",
    completed: "bg-slate-50 text-slate-500",
    cancelled: "bg-red-50 text-red-600",
    refunded: "bg-red-50 text-red-400",
};

const statusText: Record<string, string> = {
    processing: "En Proceso",
    completed: "Finalizado",
    cancelled: "Cancelado",
    refunded: "Reembolsado",
};
