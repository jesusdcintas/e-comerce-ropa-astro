        <script is:inline>
            function updateChart() {
                const statsElem = document.getElementById("stats-data");
                if (!statsElem) return;

                const stats = JSON.parse(statsElem.dataset.stats);
                const ctx = document.getElementById("salesChart");
                if (!ctx) return;

                // Limpiar anterior si existe
                if (window.mySalesChart) window.mySalesChart.destroy();

                window.mySalesChart = new Chart(ctx, {
                    type: "line",
                    data: {
                        labels: stats.chartData.labels,
                        datasets: [
                            {
                                label: "Ventas (€)",
                                data: stats.chartData.data,
                                borderColor: "#D4AF37",
                                backgroundColor: "rgba(212, 175, 55, 0.05)",
                                borderWidth: 3,
                                fill: true,
                                tension: 0.4,
                                pointRadius: 4,
                                pointBackgroundColor: "#D4AF37",
                                pointBorderColor: "#fff",
                                pointBorderWidth: 2,
                            },
                        ],
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                mode: "index",
                                intersect: false,
                                backgroundColor: "#0F172A",
                                padding: 12,
                                titleFont: { size: 10, weight: "bold" },
                                bodyFont: { size: 13, weight: "900" },
                                displayColors: false,
                                callbacks: {
                                    label: (context) =>
                                        `${context.parsed.y.toFixed(2)}€`,
                                },
                            },
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: { color: "rgba(0,0,0,0.03)" },
                                ticks: {
                                    font: { size: 10, weight: "bold" },
                                    callback: (val) => val + "€",
                                },
                            },
                            x: {
                                grid: { display: false },
                                ticks: {
                                    font: { size: 10, weight: "bold" },
                                },
                            },
                        },
                    },
                });
            }

            document.addEventListener("DOMContentLoaded", updateChart);
            document.addEventListener("astro:after-swap", updateChart);
        </script>

        <script>
            // Lógica para filas clicables
            function initClickableRows() {
                const rows = document.querySelectorAll(".clickable-row");
                rows.forEach((row) => {
                    row.addEventListener("click", (e) => {
                        const target = e.target as HTMLElement;
                        if (!target) return;

                        // Si el clic es en un botón o enlace específico, no navegar aquí
                        if (
                            target.closest("button") ||
                            target.closest("a") ||
                            target.closest("select")
                        ) {
                            return;
                        }
                        const href = (row as HTMLElement).dataset.href;
                        if (href) window.location.href = href;
                    });
                });
            }

            document.addEventListener("DOMContentLoaded", initClickableRows);
            document.addEventListener("astro:after-swap", initClickableRows);

            async function initGlobalToggles() {
                const offersToggle = document.getElementById(
                    "toggle-offers",
                ) as HTMLInputElement;
                const newToggle = document.getElementById(
                    "toggle-new",
                ) as HTMLInputElement;
                const popupsToggle = document.getElementById(
                    "toggle-popups",
                ) as HTMLInputElement;
                const maintenanceToggle = document.getElementById(
                    "toggle-maintenance",
                ) as HTMLInputElement;

                if (
                    !offersToggle ||
                    !newToggle ||
                    !popupsToggle ||
                    !maintenanceToggle
                )
                    return;

                // Cargar estados iniciales
                try {
                    const res = await fetch("/api/admin/config", {
                        method: "POST",
                        body: JSON.stringify({ action: "get" }),
                    });
                    const config = await res.json();

                    if (config && !config.error) {
                        offersToggle.checked = config.offers_enabled;
                        newToggle.checked = config.novedades_enabled;
                        popupsToggle.checked = config.popups_enabled;
                        maintenanceToggle.checked =
                            config.maintenance_mode || false;
                    }
                } catch (err) {
                    console.error("Error cargando config global:", err);
                }

                // Listeners para actualizaciones
                const handleToggle = async (key: string, value: boolean) => {
                    try {
                        const res = await fetch("/api/admin/config", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({
                                action: "update",
                                key,
                                value,
                            }),
                        });
                        const data = await res.json();
                        if (data.error) throw new Error(data.error);

                        // @ts-ignore
                        window.addToast?.(
                            "Configuración actualizada correctamente",
                            "success",
                        );
                    } catch (err: any) {
                        console.error("Error actualizando toggle:", err);
                        // @ts-ignore
                        window.showCustomModal?.({
                            title: "Error",
                            message:
                                "No se pudo actualizar la configuración: " +
                                err.message,
                            type: "alert",
                        });
                    }
                };

                offersToggle.addEventListener("change", () =>
                    handleToggle("offers_enabled", offersToggle.checked),
                );
                newToggle.addEventListener("change", () =>
                    handleToggle("novedades_enabled", newToggle.checked),
                );
                popupsToggle.addEventListener("change", () =>
                    handleToggle("popups_enabled", popupsToggle.checked),
                );
                maintenanceToggle.addEventListener("change", () =>
                    handleToggle("maintenance_mode", maintenanceToggle.checked),
                );
            }

            document.addEventListener("DOMContentLoaded", initGlobalToggles);
            document.addEventListener("astro:after-swap", initGlobalToggles);
        </script>
