---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { supabase } from "../../../lib/supabase";

const accessToken = Astro.cookies.get("sb-access-token")?.value;

if (!accessToken) {
    return Astro.redirect("/login");
}

const {
    data: { user },
} = await supabase.auth.getUser(accessToken);

// Verificar si es admin
if (!user || user.app_metadata?.role !== "admin") {
    return Astro.redirect("/");
}

const sortBy = Astro.url.searchParams.get("sort") || "created_at";
const orderParams = Astro.url.searchParams.get("order") || "desc";
const period = Astro.url.searchParams.get("period") || "all"; // all, week, month, year
const dateOffset = parseInt(Astro.url.searchParams.get("offset") || "0");
const isAsc = orderParams === "asc";

// Lógica de fechas
const now = new Date();
let startDate = new Date();
let endDate = new Date();
let label = "Todos los pedidos";

if (period === "week") {
    const day = now.getDay() || 7;
    startDate.setHours(0, 0, 0, 0);
    startDate.setDate(now.getDate() - day + 1 + dateOffset * 7);
    endDate = new Date(startDate);
    endDate.setDate(startDate.getDate() + 7);
    label = `Semana del ${startDate.toLocaleDateString("es-ES", { day: "numeric", month: "short" })}`;
} else if (period === "month") {
    startDate = new Date(now.getFullYear(), now.getMonth() + dateOffset, 1);
    endDate = new Date(now.getFullYear(), now.getMonth() + dateOffset + 1, 1);
    label = startDate.toLocaleDateString("es-ES", {
        month: "long",
        year: "numeric",
    });
} else if (period === "year") {
    startDate = new Date(now.getFullYear() + dateOffset, 0, 1);
    endDate = new Date(now.getFullYear() + dateOffset + 1, 0, 1);
    label = `Año ${startDate.getFullYear()}`;
}

// Obtener pedidos con sus items
let query = supabase
    .from("orders")
    .select("*, order_items(*, product:products(images))")
    .order(sortBy, { ascending: isAsc });

if (period !== "all") {
    query = query
        .gte("created_at", startDate.toISOString())
        .lt("created_at", endDate.toISOString());
}

const { data: orders, error } = await query;

// Función para generar URLs con filtros preservados
function getFilterUrl(newParams: Record<string, string | number>) {
    const params = new URLSearchParams(Astro.url.searchParams);
    Object.entries(newParams).forEach(([key, value]) => {
        if (value === null) params.delete(key);
        else params.set(key, value.toString());
    });
    return `?${params.toString()}`;
}

function getSortUrl(column: string) {
    return getFilterUrl({
        sort: column,
        order: sortBy === column && orderParams === "asc" ? "desc" : "asc",
    });
}

function getSortIcon(column: string) {
    if (sortBy !== column) return "[^]";
    return orderParams === "asc" ? "↑" : "↓";
}

function formatDate(dateStr: string) {
    return new Date(dateStr).toLocaleDateString("es-ES", {
        day: "2-digit",
        month: "short",
        year: "numeric",
        hour: "2-digit",
        minute: "2-digit",
    });
}

const statusBadge = {
    pending: "bg-orange-100 text-orange-600 border-orange-200",
    paid: "bg-green-100 text-green-600 border-green-200",
    shipped: "bg-blue-100 text-blue-600 border-blue-200",
    delivered: "bg-purple-100 text-purple-600 border-purple-200",
    cancelled: "bg-red-100 text-red-600 border-red-200",
};

const statusText = {
    pending: "Pendiente",
    paid: "Pagado",
    shipped: "Enviado",
    delivered: "Entregado",
    cancelled: "Cancelado",
};

const periodLabels = {
    all: "Histórico",
    week: "Semana",
    month: "Mes",
    year: "Año",
};
---

<AdminLayout title="Gestión de Pedidos">
    <div
        class="max-w-7xl mx-auto animate-in fade-in slide-in-from-bottom-6 duration-700 pb-20"
    >
        <!-- Navigation and Selection Header -->
        <div
            class="flex flex-col lg:flex-row lg:items-center justify-between gap-6 mb-8"
        >
            <div
                class="flex flex-wrap items-center gap-2 p-1.5 bg-white border border-slate-100 rounded-2xl shadow-sm w-fit"
            >
                <a
                    href={getFilterUrl({ period: "all", offset: 0 })}
                    class={`px-6 py-2.5 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all ${period === "all" ? "bg-slate-900 text-white shadow-lg shadow-slate-900/20" : "text-slate-400 hover:text-slate-600 hover:bg-slate-50"}`}
                    >Todo</a
                >
                <a
                    href={getFilterUrl({ period: "week", offset: 0 })}
                    class={`px-6 py-2.5 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all ${period === "week" ? "bg-brand-gold text-white shadow-lg shadow-brand-gold/20" : "text-slate-400 hover:text-slate-600 hover:bg-slate-50"}`}
                    >Semana</a
                >
                <a
                    href={getFilterUrl({ period: "month", offset: 0 })}
                    class={`px-6 py-2.5 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all ${period === "month" ? "bg-brand-gold text-white shadow-lg shadow-brand-gold/20" : "text-slate-400 hover:text-slate-600 hover:bg-slate-50"}`}
                    >Mes</a
                >
                <a
                    href={getFilterUrl({ period: "year", offset: 0 })}
                    class={`px-6 py-2.5 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all ${period === "year" ? "bg-brand-gold text-white shadow-lg shadow-brand-gold/20" : "text-slate-400 hover:text-slate-600 hover:bg-slate-50"}`}
                    >Año</a
                >
            </div>

            {
                period !== "all" && (
                    <div class="flex items-center gap-4 bg-white px-6 py-2.5 rounded-2xl border border-slate-100 shadow-sm">
                        <a
                            href={getFilterUrl({ offset: dateOffset - 1 })}
                            class="p-2 text-slate-400 hover:text-brand-gold transition-colors"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 19l-7-7 7-7"
                                />
                            </svg>
                        </a>
                        <span class="text-sm font-black text-slate-800 uppercase tracking-tight min-w-[120px] text-center">
                            {label}
                        </span>
                        <a
                            href={getFilterUrl({ offset: dateOffset + 1 })}
                            class="p-2 text-slate-400 hover:text-brand-gold transition-colors"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"
                                />
                            </svg>
                        </a>
                    </div>
                )
            }

            <button
                id="export-report-btn"
                class="inline-flex items-center px-6 py-3 bg-slate-900 text-white rounded-2xl font-bold text-xs uppercase tracking-widest hover:bg-brand-gold transition-all shadow-xl shadow-slate-900/10 group active:scale-95"
                data-orders={JSON.stringify(orders)}
                data-label={label}
            >
                <svg
                    class="w-4 h-4 mr-3 text-brand-gold group-hover:text-white transition-colors"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    ></path>
                </svg>
                Descargar Informe {period !== "all" ? "del Tramo" : "Completo"}
            </button>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <div
                class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-sm relative overflow-hidden group"
            >
                <div class="relative z-10">
                    <div
                        class="text-[10px] font-black uppercase text-slate-400 mb-2 tracking-widest"
                    >
                        Resumen del Período
                    </div>
                    <div
                        class="text-3xl font-black text-slate-800 tracking-tighter capitalize"
                    >
                        {periodLabels[period as keyof typeof periodLabels]}
                    </div>
                </div>
                <div
                    class="absolute -right-4 -bottom-4 w-24 h-24 text-slate-50 group-hover:text-slate-100 transition-colors pointer-events-none"
                >
                    <svg fill="currentColor" viewBox="0 0 24 24"
                        ><path
                            d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"
                        ></path></svg
                    >
                </div>
            </div>

            <div
                class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-sm relative overflow-hidden group"
            >
                <div class="relative z-10">
                    <div
                        class="text-[10px] font-black uppercase text-slate-400 mb-2 tracking-widest"
                    >
                        Total Pedidos
                    </div>
                    <div
                        class="text-4xl font-black text-slate-800 tracking-tighter"
                    >
                        {orders?.length || 0}
                    </div>
                </div>
                <div
                    class="absolute -right-4 -bottom-4 w-24 h-24 text-slate-50 group-hover:text-slate-100 transition-colors pointer-events-none"
                >
                    <svg fill="currentColor" viewBox="0 0 24 24"
                        ><path
                            d="M11 15h2v2h-2zm0-8h2v6h-2zm.99-5C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"
                        ></path></svg
                    >
                </div>
            </div>

            <div
                class="bg-slate-900 p-8 rounded-[2.5rem] shadow-2xl shadow-slate-900/20 relative overflow-hidden group"
            >
                <div class="relative z-10">
                    <div
                        class="text-[10px] font-black uppercase text-slate-500 mb-2 tracking-widest"
                    >
                        Importe Facturado
                    </div>
                    <div
                        class="text-4xl font-black text-brand-gold tracking-tighter"
                    >
                        {
                            (
                                orders?.reduce(
                                    (acc, curr) =>
                                        acc +
                                        (curr.status !== "cancelled"
                                            ? curr.total_amount
                                            : 0),
                                    0,
                                ) / 100
                            ).toFixed(2)
                        }€
                    </div>
                </div>
                <div
                    class="absolute -right-4 -bottom-4 w-24 h-24 text-white/5 pointer-events-none"
                >
                    <svg fill="currentColor" viewBox="0 0 24 24"
                        ><path
                            d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"
                        ></path></svg
                    >
                </div>
            </div>
        </div>

        <div
            id="bulk-actions-bar"
            class="hidden sticky top-4 z-30 bg-slate-900 text-white p-6 rounded-[2rem] shadow-2xl mb-10 items-center justify-between animate-in zoom-in-95 duration-200"
        >
            <div class="flex items-center gap-6">
                <div
                    class="bg-brand-gold text-slate-900 w-10 h-10 rounded-xl flex items-center justify-center font-black"
                    id="selected-count"
                >
                    0
                </div>
                <div>
                    <p
                        class="text-[10px] font-black uppercase tracking-widest text-slate-400"
                    >
                        Pedidos seleccionados
                    </p>
                    <p class="text-sm font-bold">
                        Acciones masivas disponibles
                    </p>
                </div>
            </div>
            <div class="flex items-center gap-4">
                <select
                    id="bulk-status-select"
                    class="bg-slate-800 border-none rounded-xl text-xs font-bold uppercase tracking-widest px-4 py-3 outline-none focus:ring-2 focus:ring-brand-gold/50 cursor-pointer"
                >
                    <option value="" disabled selected
                        >CAMBIAR ESTADO A...</option
                    >
                    {
                        Object.entries(statusText).map(([key, text]) => (
                            <option value={key}>{text.toUpperCase()}</option>
                        ))
                    }
                </select>
                <button
                    id="apply-bulk-action"
                    class="bg-brand-gold text-slate-900 px-8 py-3 rounded-xl text-[10px] font-black uppercase tracking-widest hover:bg-white transition-all shadow-lg active:scale-95"
                >
                    Aplicar a seleccionados
                </button>
                <button
                    id="cancel-selection"
                    class="text-slate-400 hover:text-white text-[10px] font-black uppercase tracking-widest px-4"
                >
                    Cancelar
                </button>
            </div>
        </div>

        {
            error && (
                <div class="bg-red-50 text-red-700 p-6 rounded-3xl mb-10 border border-red-100 flex items-center gap-4">
                    <span class="text-2xl">!</span>
                    <p class="font-bold">{error.message}</p>
                </div>
            )
        }

        <div
            class="bg-white rounded-[2.5rem] shadow-sm border border-slate-100 overflow-hidden"
        >
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="border-b border-slate-50">
                            <th class="px-8 py-6 w-10">
                                <input
                                    type="checkbox"
                                    id="select-all-orders"
                                    class="w-5 h-5 rounded-lg border-2 border-slate-200 text-brand-gold focus:ring-brand-gold/20 cursor-pointer"
                                />
                            </th>
                            <th class="px-8 py-6">
                                <a
                                    href={getSortUrl("created_at")}
                                    class="flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-brand-gold transition-colors"
                                >
                                    ID / Fecha <span
                                        class="text-[8px] opacity-50"
                                        >{getSortIcon("created_at")}</span
                                    >
                                </a>
                            </th>
                            <th class="px-8 py-6">
                                <a
                                    href={getSortUrl("shipping_name")}
                                    class="flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-brand-gold transition-colors"
                                >
                                    Cliente <span class="text-[8px] opacity-50"
                                        >{getSortIcon("shipping_name")}</span
                                    >
                                </a>
                            </th>
                            <th class="px-8 py-6">
                                <a
                                    href={getSortUrl("status")}
                                    class="flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-brand-gold transition-colors"
                                >
                                    Estado <span class="text-[8px] opacity-50"
                                        >{getSortIcon("status")}</span
                                    >
                                </a>
                            </th>
                            <th
                                class="px-8 py-6 text-[10px] font-black uppercase tracking-widest text-slate-400"
                            >
                                Productos
                            </th>
                            <th class="px-8 py-6">
                                <a
                                    href={getSortUrl("total_amount")}
                                    class="flex items-center gap-2 justify-end text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-brand-gold transition-colors"
                                >
                                    Total <span class="text-[8px] opacity-50"
                                        >{getSortIcon("total_amount")}</span
                                    >
                                </a>
                            </th>
                            <th
                                class="px-8 py-6 text-[10px] font-black uppercase tracking-widest text-slate-400"
                            ></th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-50">
                        {
                            orders?.map((order) => (
                                <tr
                                    class="group hover:bg-slate-50/50 transition-colors cursor-pointer clickable-row"
                                    data-href={`/admin/orders/${order.id}`}
                                >
                                    <td class="px-8 py-6">
                                        <input
                                            type="checkbox"
                                            class="order-checkbox w-5 h-5 rounded-lg border-2 border-slate-200 text-brand-gold focus:ring-brand-gold/20 cursor-pointer"
                                            data-id={order.id}
                                        />
                                    </td>
                                    <td class="px-8 py-6">
                                        <div class="font-black text-slate-800">
                                            #
                                            {order.id
                                                .toString()
                                                .padStart(6, "0")}
                                        </div>
                                        <div class="text-[10px] font-bold text-slate-400 mt-1 uppercase tracking-tighter">
                                            {formatDate(order.created_at)}
                                        </div>
                                    </td>
                                    <td class="px-8 py-6">
                                        <div class="font-bold text-slate-700">
                                            {order.shipping_name}
                                        </div>
                                        <div class="text-[10px] text-slate-400 font-medium">
                                            {order.shipping_email}
                                        </div>
                                    </td>
                                    <td class="px-8 py-6">
                                        <select
                                            data-order-id={order.id}
                                            class={`px-3 py-2 rounded-lg text-[10px] font-black uppercase tracking-widest border-2 cursor-pointer focus:ring-4 focus:ring-brand-gold/10 outline-none transition-all status-selector ${statusBadge[order.status as keyof typeof statusBadge]}`}
                                        >
                                            {Object.entries(statusText).map(
                                                ([key, text]) => (
                                                    <option
                                                        value={key}
                                                        selected={
                                                            order.status === key
                                                        }
                                                    >
                                                        {text.toUpperCase()}
                                                    </option>
                                                ),
                                            )}
                                        </select>
                                    </td>
                                    <td class="px-8 py-6">
                                        <div class="flex -space-x-3 overflow-hidden">
                                            {order.order_items.map(
                                                (item: any) => (
                                                    <div
                                                        class="relative w-10 h-10 rounded-xl border-2 border-white bg-slate-100 overflow-hidden shadow-sm hover:z-10 transition-all hover:scale-110"
                                                        title={`${item.product_name} (${item.product_size})`}
                                                    >
                                                        {item.product
                                                            ?.images?.[0] ? (
                                                            <img
                                                                src={
                                                                    item.product
                                                                        .images[0]
                                                                }
                                                                alt={
                                                                    item.product_name
                                                                }
                                                                class="w-full h-full object-cover"
                                                            />
                                                        ) : (
                                                            <div class="flex items-center justify-center h-full text-[10px] font-black text-slate-400 uppercase">
                                                                {item.product_name.charAt(
                                                                    0,
                                                                )}
                                                            </div>
                                                        )}
                                                    </div>
                                                ),
                                            )}
                                        </div>
                                        <div class="mt-2 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                                            {order.order_items.length}{" "}
                                            {order.order_items.length === 1
                                                ? "artículo"
                                                : "artículos"}
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 text-right">
                                        <div class="text-xl font-black text-slate-800 tracking-tighter">
                                            {(order.total_amount / 100).toFixed(
                                                2,
                                            )}
                                            €
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 text-right">
                                        <div class="flex items-center justify-end gap-2">
                                            <a
                                                href={`/api/orders/download-pdf?orderId=${order.id}&type=ticket`}
                                                target="_blank"
                                                class="w-10 h-10 rounded-xl bg-slate-50 flex items-center justify-center text-slate-400 hover:bg-brand-gold hover:text-white transition-all shadow-sm"
                                                title="Descargar Factura Simplificada"
                                            >
                                                <svg
                                                    class="w-5 h-5"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                                    />
                                                </svg>
                                            </a>
                                            <a
                                                href={`/admin/orders/${order.id}`}
                                                class="w-10 h-10 rounded-xl bg-slate-50 flex items-center justify-center text-slate-400 hover:bg-slate-900 hover:text-white transition-all shadow-sm"
                                                title="Ver Detalles"
                                            >
                                                <svg
                                                    class="w-5 h-5"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                                    />
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                                    />
                                                </svg>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            ))
                        }
                    </tbody>
                </table>
            </div>

            {
                !orders ||
                    (orders.length === 0 && (
                        <div class="py-20 text-center space-y-4">
                            <div class="text-6xl font-bold text-gray-400">
                                -
                            </div>
                            <div class="text-xl font-bold text-slate-800">
                                No hay pedidos registrados
                            </div>
                            <p class="text-slate-400">
                                Cuando los clientes realicen compras, aparecerán
                                aquí.
                            </p>
                        </div>
                    ))
            }
        </div>
    </div>

    <script is:inline>
        const selectors = document.querySelectorAll(".status-selector");

        selectors.forEach((select) => {
            select.addEventListener("change", async (e) => {
                const newStatus = e.target.value;
                const orderId = select.dataset.orderId;
                const orderLabel = orderId.toString().padStart(6, "0");

                window.showCustomModal({
                    title: "Actualizar Estado",
                    message: `¿Estás seguro de cambiar el estado del pedido #${orderLabel} a "${newStatus.toUpperCase()}"?`,
                    type: "confirm",
                    onConfirm: async () => {
                        select.disabled = true;
                        select.style.opacity = "0.5";

                        try {
                            const res = await fetch(
                                "/api/admin/orders/update-status",
                                {
                                    method: "POST",
                                    headers: {
                                        "Content-Type": "application/json",
                                    },
                                    body: JSON.stringify({
                                        id: orderId,
                                        status: newStatus,
                                    }),
                                },
                            );

                            if (res.ok) {
                                window.location.reload();
                            } else {
                                const err = await res.json();
                                window.showCustomModal({
                                    title: "Error de Actualización",
                                    message: "Error: " + err.error,
                                    type: "alert",
                                });
                                window.location.reload();
                            }
                        } catch (err) {
                            window.showCustomModal({
                                title: "Error de Conexión",
                                message: "No se pudo conectar con el servidor.",
                                type: "alert",
                            });
                            window.location.reload();
                        }
                    },
                    onCancel: () => {
                        window.location.reload();
                    },
                });
            });
        });

        // Lógica para filas clicables
        function initClickableRows() {
            const rows = document.querySelectorAll(".clickable-row");
            rows.forEach((row) => {
                row.addEventListener("click", (e) => {
                    const target = e.target;
                    if (!target) return;

                    // Si el clic es en un botón, enlace, select o checkbox, no navegar
                    if (
                        target.closest("button") ||
                        target.closest("a") ||
                        target.closest("select") ||
                        target.closest("input[type='checkbox']") ||
                        target.classList.contains("order-checkbox")
                    ) {
                        return;
                    }
                    const href = row.dataset.href;
                    if (href) window.location.href = href;
                });
            });

            // Evitar que el clic en la celda del checkbox propague hacia la fila
            const checkboxes = document.querySelectorAll(".order-checkbox");
            checkboxes.forEach((cb) => {
                cb.addEventListener("click", (e) => {
                    e.stopPropagation();
                });

                // También evitar que el clic en el TD que contiene el checkbox navegue
                cb.parentElement?.addEventListener("click", (e) => {
                    e.stopPropagation();
                });
            });

            const selectAll = document.getElementById("select-all-orders");
            selectAll?.addEventListener("click", (e) => {
                e.stopPropagation();
            });
        }

        // Lógica de Selección Masiva
        function initBulkActions() {
            const selectAll = document.getElementById("select-all-orders");
            const checkboxes = document.querySelectorAll(".order-checkbox");
            const bulkBar = document.getElementById("bulk-actions-bar");
            const selectedCountDisplay =
                document.getElementById("selected-count");
            const applyBtn = document.getElementById("apply-bulk-action");
            const bulkSelect = document.getElementById("bulk-status-select");
            const cancelBtn = document.getElementById("cancel-selection");

            function updateUI() {
                const selected = Array.from(checkboxes).filter(
                    (cb) => cb.checked,
                );
                const count = selected.length;

                if (count > 0) {
                    bulkBar.classList.remove("hidden");
                    bulkBar.classList.add("flex");
                    selectedCountDisplay.textContent = count;
                } else {
                    bulkBar.classList.add("hidden");
                    bulkBar.classList.remove("flex");
                }
            }

            selectAll?.addEventListener("change", () => {
                checkboxes.forEach((cb) => (cb.checked = selectAll.checked));
                updateUI();
            });

            checkboxes.forEach((cb) => {
                cb.addEventListener("change", () => {
                    if (!cb.checked) selectAll.checked = false;
                    updateUI();
                });
            });

            cancelBtn?.addEventListener("click", () => {
                checkboxes.forEach((cb) => (cb.checked = false));
                if (selectAll) selectAll.checked = false;
                updateUI();
            });

            applyBtn?.addEventListener("click", async () => {
                const selectedIds = Array.from(checkboxes)
                    .filter((cb) => cb.checked)
                    .map((cb) => cb.dataset.id);
                const newStatus = bulkSelect.value;

                if (!newStatus) {
                    window.showCustomModal({
                        title: "Acción requerida",
                        message:
                            "Por favor, selecciona un estado para aplicar.",
                        type: "alert",
                    });
                    return;
                }

                window.showCustomModal({
                    title: "Acción Masiva",
                    message: `¿Estás seguro de cambiar el estado de ${selectedIds.length} pedidos a "${newStatus.toUpperCase()}"?`,
                    type: "confirm",
                    onConfirm: async () => {
                        applyBtn.disabled = true;
                        applyBtn.textContent = "Procesando...";

                        try {
                            const res = await fetch(
                                "/api/admin/orders/bulk-update-status",
                                {
                                    method: "POST",
                                    headers: {
                                        "Content-Type": "application/json",
                                    },
                                    body: JSON.stringify({
                                        ids: selectedIds,
                                        status: newStatus,
                                    }),
                                },
                            );

                            if (res.ok) {
                                window.location.reload();
                            } else {
                                const err = await res.json();
                                throw new Error(
                                    err.error || "Error desconocido",
                                );
                            }
                        } catch (err) {
                            window.showCustomModal({
                                title: "Error",
                                message:
                                    "No se pudieron actualizar los pedidos: " +
                                    err.message,
                                type: "alert",
                            });
                            applyBtn.disabled = false;
                            applyBtn.textContent = "Aplicar a seleccionados";
                        }
                    },
                });
            });
        }

        // Lógica de exportación
        function initExport() {
            const exportBtn = document.getElementById("export-report-btn");
            if (!exportBtn) return;

            exportBtn.addEventListener("click", async () => {
                const orders = JSON.parse(exportBtn.dataset.orders || "[]");
                const label = exportBtn.dataset.label || "Reporte";
                const originalHtml = exportBtn.innerHTML;

                try {
                    exportBtn.disabled = true;
                    exportBtn.style.opacity = "0.7";
                    exportBtn.innerHTML = `
                        <svg class="animate-spin h-4 w-4 mr-3 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        Generando...
                    `;

                    const response = await fetch(
                        "/api/admin/orders/export-report",
                        {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ orders, label }),
                        },
                    );

                    if (!response.ok)
                        throw new Error("Error al generar el reporte");

                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement("a");
                    a.href = url;
                    a.download = `Reporte_Ventas_${label.replace(/\s+/g, "_")}.pdf`;
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);
                } catch (err) {
                    console.error(err);
                    window.showCustomModal({
                        title: "Error de Reporte",
                        message:
                            "No se pudo generar el reporte. Inténtalo de nuevo.",
                        type: "alert",
                    });
                } finally {
                    exportBtn.disabled = false;
                    exportBtn.style.opacity = "1";
                    exportBtn.innerHTML = originalHtml;
                }
            });
        }

        document.addEventListener("DOMContentLoaded", () => {
            initClickableRows();
            initBulkActions();
            initExport();
        });

        document.addEventListener("astro:after-swap", () => {
            initClickableRows();
            initBulkActions();
            initExport();
        });
    </script>
</AdminLayout>
