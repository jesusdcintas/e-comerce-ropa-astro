---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { supabase } from "../../../lib/supabase";

const { id } = Astro.params;
const accessToken = Astro.cookies.get("sb-access-token")?.value;

if (!accessToken) {
    return Astro.redirect("/login");
}

const {
    data: { user },
} = await supabase.auth.getUser(accessToken);

if (!user || user.app_metadata?.role !== "admin") {
    return Astro.redirect("/");
}

// Obtener pedido con sus items y productos relacionados
const { data: order, error } = await supabase
    .from("orders")
    .select("*, order_items(*, product:products(images))")
    .eq("id", id)
    .single();

if (error || !order) {
    return Astro.redirect("/admin/orders");
}

function formatDate(dateStr: string) {
    return new Date(dateStr).toLocaleDateString("es-ES", {
        day: "2-digit",
        month: "long",
        year: "numeric",
        hour: "2-digit",
        minute: "2-digit",
    });
}

const statusBadge: Record<string, string> = {
    paid: "bg-green-100 text-green-600 border-green-200",
    processing: "bg-blue-100 text-blue-600 border-blue-200",
    completed: "bg-slate-100 text-slate-500 border-slate-200",
    cancelled: "bg-red-100 text-red-600 border-red-200",
    refunded: "bg-red-50 text-red-400 border-red-100",
};

const statusText: Record<string, string> = {
    paid: "Pagado",
    processing: "En Proceso",
    completed: "Finalizado",
    cancelled: "Cancelado",
    refunded: "Reembolsado",
};

const shippingStatusBadge: Record<string, string> = {
    pending: "bg-slate-100 text-slate-500 border-slate-200",
    shipped: "bg-blue-100 text-blue-600 border-blue-200",
    in_delivery: "bg-orange-100 text-orange-600 border-orange-200",
    delivered: "bg-green-100 text-green-600 border-green-200",
    returned: "bg-red-100 text-red-600 border-red-200",
    failed: "bg-red-50 text-red-500 border-red-100",
};

const shippingStatusText: Record<string, string> = {
    pending: "Pendiente de Envío",
    shipped: "En Tránsito",
    in_delivery: "En Reparto",
    delivered: "Entregado",
    returned: "Devuelto / Incidencia",
    failed: "Incidencia",
};

function formatFullDate(date: string | null) {
    if (!date) return "—";
    return new Date(date).toLocaleString("es-ES", {
        day: "2-digit",
        month: "short",
        year: "numeric",
        hour: "2-digit",
        minute: "2-digit",
    });
}
---

<AdminLayout
    title={`Detalle de Pedido #${order.id.toString().padStart(6, "0")}`}
>
    <div
        class="max-w-5xl mx-auto animate-in fade-in slide-in-from-bottom-6 duration-700 pb-20"
    >
        <!-- Premium Header -->
        <div
            class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-12"
        >
            <div class="space-y-4">
                <a
                    href="/admin/orders"
                    class="inline-flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-slate-400 hover:text-brand-gold transition-colors group"
                >
                    <svg
                        class="w-4 h-4 transform group-hover:-translate-x-1 transition-transform"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Volver a Pedidos
                </a>
                <div class="space-y-1">
                    <div
                        class="flex items-center gap-2 text-[10px] font-black uppercase tracking-[0.2em] text-brand-gold"
                    >
                        <span class="w-8 h-px bg-brand-gold"></span>
                        Expediente de Transacción
                    </div>
                    <h2
                        class="text-5xl font-black text-slate-800 tracking-tighter"
                    >
                        Pedido <span class="text-brand-gold italic font-serif"
                            >#{order.id.toString().padStart(6, "0")}</span
                        >
                    </h2>
                    <p class="text-slate-400 font-medium">
                        {formatDate(order.created_at)}
                    </p>
                </div>
            </div>

            <div class="flex flex-wrap gap-4 items-end">
                <div class="flex flex-col gap-2">
                    <span
                        class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1"
                        >Control Comercial</span
                    >
                    <select
                        id="order-status-select"
                        data-order-id={order.id}
                        class={`px-4 py-3 rounded-2xl text-[10px] font-black uppercase tracking-widest border-2 cursor-pointer focus:ring-4 focus:ring-brand-gold/10 outline-none transition-all ${statusBadge[order.status]}`}
                    >
                        {
                            Object.entries(statusText).map(([key, text]) => (
                                <option
                                    value={key}
                                    selected={order.status === key}
                                >
                                    {text.toUpperCase()}
                                </option>
                            ))
                        }
                    </select>
                </div>
                <div class="flex flex-col gap-2">
                    <span
                        class="text-[10px] font-black text-brand-gold uppercase tracking-widest mb-1"
                        >Control Logístico</span
                    >
                    <select
                        id="shipping-status-select"
                        data-order-id={order.id}
                        class={`px-4 py-3 rounded-2xl text-[10px] font-black uppercase tracking-widest border-2 cursor-pointer focus:ring-4 focus:ring-brand-gold/10 outline-none transition-all ${shippingStatusBadge[order.shipping_status || "pending"]}`}
                    >
                        {
                            Object.entries(shippingStatusText).map(
                                ([key, text]) => (
                                    <option
                                        value={key}
                                        selected={
                                            (order.shipping_status ||
                                                "pending") === key
                                        }
                                    >
                                        {text.toUpperCase()}
                                    </option>
                                ),
                            )
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left: Order Items -->
            <div class="lg:col-span-2 space-y-6">
                <div
                    class="bg-white rounded-[2.5rem] shadow-sm border border-slate-100 overflow-hidden"
                >
                    <div
                        class="px-10 py-8 border-b border-slate-50 flex items-center justify-between"
                    >
                        <h3
                            class="text-lg font-black text-slate-800 tracking-tight"
                        >
                            Artículos del Pedido
                        </h3>
                        <span
                            class="text-[10px] font-black text-slate-400 uppercase tracking-widest bg-slate-50 px-3 py-1 rounded-lg"
                        >
                            {order.order_items.length}
                            {
                                order.order_items.length === 1
                                    ? "Posición"
                                    : "Posiciones"
                            }
                        </span>
                    </div>

                    <div class="divide-y divide-slate-50">
                        {
                            order.order_items.map((item: any) => (
                                <div class="px-10 py-6 flex items-center gap-6 group hover:bg-slate-50/50 transition-colors">
                                    <div class="w-20 h-24 bg-slate-100 rounded-2xl flex items-center justify-center overflow-hidden shadow-inner border border-slate-100 shrink-0">
                                        {item.product?.images?.[0] ? (
                                            <img
                                                src={item.product.images[0]}
                                                alt={item.product_name}
                                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                                            />
                                        ) : (
                                            <span class="text-xl font-black text-slate-300 uppercase">
                                                {item.product_name.charAt(0)}
                                            </span>
                                        )}
                                    </div>
                                    <div class="flex-1">
                                        <h4 class="font-black text-slate-800 tracking-tight">
                                            {item.product_name}
                                        </h4>
                                        <div class="flex items-center gap-4 mt-1">
                                            <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest bg-slate-50 px-2 py-0.5 rounded border border-slate-100">
                                                Talla: {item.product_size}
                                            </span>
                                            <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                                                Cant: {item.quantity}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <p class="text-lg font-black text-slate-800 tracking-tighter">
                                            {(item.price / 100).toFixed(2)}€
                                        </p>
                                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tighter mt-0.5">
                                            Subtotal:{" "}
                                            {(
                                                (item.price * item.quantity) /
                                                100
                                            ).toFixed(2)}
                                            €
                                        </p>
                                    </div>
                                </div>
                            ))
                        }
                    </div>

                    <div class="bg-slate-900 p-10 mt-4 rounded-b-[2.5rem]">
                        <div class="flex justify-between items-end">
                            <div>
                                <p
                                    class="text-[10px] font-black text-slate-500 uppercase tracking-widest mb-1"
                                >
                                    Cálculo de Transacción
                                </p>
                                <p
                                    class="text-slate-400 text-sm font-medium italic"
                                >
                                    Incluye impuestos y gestión logística
                                </p>
                            </div>
                            <div class="text-right">
                                <p
                                    class="text-slate-500 text-[10px] font-black uppercase tracking-widest mb-1"
                                >
                                    Total Liquidado
                                </p>
                                <p
                                    class="text-5xl font-black text-brand-gold tracking-tighter"
                                >
                                    {(order.total_amount / 100).toFixed(2)}€
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right: Customer Info -->
            <div class="space-y-6">
                <!-- Trazabilidad Logística -->
                <div
                    class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-sm space-y-6 relative overflow-hidden"
                >
                    <div>
                        <h3
                            class="text-xs font-black text-slate-400 uppercase tracking-widest flex items-center gap-2"
                        >
                            Trazabilidad Real
                        </h3>
                        <p
                            class="text-[10px] text-slate-500 font-bold uppercase mt-1 tracking-widest"
                        >
                            Historial de Hitos
                        </p>
                    </div>

                    <div class="space-y-4 relative z-10 text-[10px]">
                        <div
                            class={`flex items-center justify-between p-3 rounded-xl border ${order.created_at ? "bg-green-50/50 border-green-100" : "bg-slate-50 border-slate-100"}`}
                        >
                            <span class="font-black text-slate-700 uppercase"
                                >Pago Confirmado</span
                            >
                            <span class="font-bold text-slate-500"
                                >{formatFullDate(order.created_at)}</span
                            >
                        </div>
                        <div
                            class={`flex items-center justify-between p-3 rounded-xl border ${order.processing_at ? "bg-blue-50/50 border-blue-100" : "bg-slate-50 border-slate-100 opacity-50"}`}
                        >
                            <span class="font-black text-slate-700 uppercase"
                                >En Proceso</span
                            >
                            <span class="font-bold text-slate-500"
                                >{formatFullDate(order.processing_at)}</span
                            >
                        </div>
                        <div
                            class={`flex items-center justify-between p-3 rounded-xl border ${order.shipped_at ? "bg-blue-50/50 border-blue-100" : "bg-slate-50 border-slate-100 opacity-50"}`}
                        >
                            <span class="font-black text-slate-700 uppercase"
                                >En Tránsito</span
                            >
                            <span class="font-bold text-slate-500"
                                >{formatFullDate(order.shipped_at)}</span
                            >
                        </div>
                        <div
                            class={`flex items-center justify-between p-3 rounded-xl border ${order.in_delivery_at ? "bg-orange-50/50 border-orange-100" : "bg-slate-50 border-slate-100 opacity-50"}`}
                        >
                            <span class="font-black text-slate-700 uppercase"
                                >En Reparto</span
                            >
                            <span class="font-bold text-slate-500"
                                >{formatFullDate(order.in_delivery_at)}</span
                            >
                        </div>
                        <div
                            class={`flex items-center justify-between p-3 rounded-xl border ${order.delivered_at ? "bg-green-50/70 border-green-100" : "bg-slate-50 border-slate-100 opacity-50"}`}
                        >
                            <span class="font-black text-slate-700 uppercase"
                                >Entregado</span
                            >
                            <span class="font-bold text-slate-500"
                                >{formatFullDate(order.delivered_at)}</span
                            >
                        </div>
                    </div>
                </div>
                <!-- Customer Card -->
                <div
                    class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-sm space-y-6 relative overflow-hidden"
                >
                    <div
                        class="absolute -right-6 -bottom-6 text-8xl opacity-5 pointer-events-none"
                    >
                    </div>
                    <h3
                        class="text-xs font-black text-slate-400 uppercase tracking-widest flex items-center gap-2"
                    >
                        <span class="w-1.5 h-1.5 rounded-full bg-brand-gold"
                        ></span>
                        Información del Cliente
                    </h3>
                    <div class="space-y-4">
                        <div>
                            <p
                                class="text-[10px] font-bold text-slate-400 uppercase tracking-widest"
                            >
                                Nombre del Titular
                            </p>
                            <p
                                class="text-lg font-black text-slate-800 tracking-tight"
                            >
                                {order.shipping_name}
                            </p>
                        </div>
                        <div>
                            <p
                                class="text-[10px] font-bold text-slate-400 uppercase tracking-widest"
                            >
                                Contacto Directo
                            </p>
                            <p
                                class="font-bold text-slate-600 underline decoration-brand-gold/30"
                            >
                                {order.shipping_email}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Shipping Address -->
                <div
                    class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-sm space-y-6"
                >
                    <h3
                        class="text-xs font-black text-slate-400 uppercase tracking-widest flex items-center gap-2"
                    >
                        <span class="w-1.5 h-1.5 rounded-full bg-slate-900"
                        ></span>
                        Destino de Entrega
                    </h3>
                    <div
                        class="space-y-2 text-sm text-slate-600 leading-relaxed font-medium"
                    >
                        <p
                            class="font-black text-slate-800 uppercase text-xs tracking-widest mb-4"
                        >
                            Dirección Postal
                        </p>
                        <p>{order.shipping_address}</p>
                        <p>{order.shipping_zip} {order.shipping_city}</p>
                        <p
                            class="text-[10px] font-black text-slate-400 mt-4 border-t border-slate-50 pt-4 uppercase tracking-widest"
                        >
                            Referencia Geográfica España
                        </p>
                    </div>
                </div>

                <!-- Internal Actions -->
                <div
                    class="bg-slate-50 p-6 rounded-[2rem] border border-slate-100 space-y-3"
                >
                    <a
                        href={`/api/orders/download-pdf?orderId=${order.id}&type=ticket`}
                        target="_blank"
                        class="w-full flex items-center justify-center py-4 bg-white border border-slate-200 rounded-2xl text-[10px] font-black uppercase tracking-widest text-slate-800 hover:bg-slate-900 hover:text-white hover:border-slate-900 transition-all shadow-sm"
                    >
                        Descargar Factura Simplificada
                    </a>
                    {
                        order.invoice_number && (
                            <a
                                href={`/api/orders/download-pdf?orderId=${order.id}&type=invoice`}
                                target="_blank"
                                class="w-full flex items-center justify-center py-4 bg-brand-gold/10 border border-brand-gold/20 rounded-2xl text-[10px] font-black uppercase tracking-widest text-brand-gold hover:bg-brand-gold hover:text-white transition-all shadow-sm"
                            >
                                Descargar Factura
                            </a>
                        )
                    }
                    {
                        order.refund_invoice_number && (
                            <a
                                href={`/api/orders/download-pdf?orderId=${order.id}&type=refund`}
                                target="_blank"
                                class="w-full flex items-center justify-center py-4 bg-red-50 border border-red-100 rounded-2xl text-[10px] font-black uppercase tracking-widest text-red-600 hover:bg-red-500 hover:text-white transition-all shadow-sm"
                            >
                                Descargar Factura Abono
                            </a>
                        )
                    }
                    {
                        !order.invoice_number && (
                            <button
                                disabled
                                class="w-full py-4 bg-slate-100 border border-slate-200 rounded-2xl text-[10px] font-black uppercase tracking-widest text-slate-300 cursor-not-allowed"
                            >
                                Factura no solicitada
                            </button>
                        )
                    }
                </div>
            </div>

            <script is:inline>
                const statusSelect = document.getElementById(
                    "order-status-select",
                );
                const shippingSelect = document.getElementById(
                    "shipping-status-select",
                );

                async function updateStatus(payload) {
                    try {
                        const res = await fetch(
                            "/api/admin/orders/update-status",
                            {
                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify(payload),
                            },
                        );

                        if (res.ok) {
                            window.location.reload();
                        } else {
                            const err = await res.json();
                            window.showCustomModal({
                                title: "Error de Actualización",
                                message: "Error: " + err.error,
                                type: "alert",
                            });
                            window.location.reload();
                        }
                    } catch (err) {
                        window.showCustomModal({
                            title: "Error de Conexión",
                            message: "No se pudo conectar con el servidor.",
                            type: "alert",
                        });
                        window.location.reload();
                    }
                }

                const statusLabels = {
                    paid: "PAGADO",
                    processing: "EN PROCESO",
                    completed: "FINALIZADO",
                    cancelled: "CANCELADO",
                    refunded: "REEMBOLSADO",
                };

                const shippingLabels = {
                    pending: "PENDIENTE",
                    shipped: "EN TRÁNSITO",
                    in_delivery: "EN REPARTO",
                    delivered: "ENTREGADO",
                    returned: "DEVUELTO / INCIDENCIA",
                    failed: "INCIDENCIA",
                };

                statusSelect?.addEventListener("change", (e) => {
                    const status = e.target.value;
                    const id = statusSelect.dataset.orderId;
                    const label = statusLabels[status] || status.toUpperCase();
                    window.showCustomModal({
                        title: "Actualizar Pedido",
                        message: `Vas a cambiar el estado comercial a "${label}".`,
                        type: "confirm",
                        onConfirm: () => updateStatus({ id, status }),
                        onCancel: () => window.location.reload(),
                    });
                });

                shippingSelect?.addEventListener("change", (e) => {
                    const shipping_status = e.target.value;
                    const id = shippingSelect.dataset.orderId;
                    const label =
                        shippingLabels[shipping_status] ||
                        shipping_status.toUpperCase();
                    window.showCustomModal({
                        title: "Actualizar Logística",
                        message: `Vas a cambiar el estado del envío a "${label}". Esto enviará notificaciones y podría cerrar el pedido si marcas como ENTREGADO.`,
                        type: "confirm",
                        onConfirm: () => updateStatus({ id, shipping_status }),
                        onCancel: () => window.location.reload(),
                    });
                });
            </script>
        </div>
    </div>
</AdminLayout>
