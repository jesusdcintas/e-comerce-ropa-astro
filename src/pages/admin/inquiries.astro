---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";

const accessToken = Astro.cookies.get("sb-access-token")?.value;

if (!accessToken) {
    return Astro.redirect("/login");
}

const {
    data: { user },
} = await supabase.auth.getUser(accessToken);

// Verificar si es admin
if (!user || user.app_metadata?.role !== "admin") {
    return Astro.redirect("/");
}

// Obtener consultas con información de producto
const { data: inquiries, error } = await supabase
    .from("inquiries_with_product")
    .select("*, messages:inquiry_messages(*)")
    .order("created_at", { ascending: false });

// Ordenar mensajes por fecha ascendente para cada consulta
inquiries?.forEach((inquiry) => {
    if (inquiry.messages) {
        inquiry.messages.sort(
            (a: any, b: any) =>
                new Date(a.created_at).getTime() -
                new Date(b.created_at).getTime(),
        );
    }
});

function formatDate(dateStr: string) {
    return new Date(dateStr).toLocaleDateString("es-ES", {
        day: "2-digit",
        month: "short",
        hour: "2-digit",
        minute: "2-digit",
    });
}

const statusColors = {
    pending: "bg-orange-100 text-orange-800 border-orange-200",
    answered: "bg-green-100 text-green-800 border-green-200",
    closed: "bg-gray-100 text-gray-800 border-gray-200",
};
---

<AdminLayout title="Consultas de Clientes">
    <div
        class="max-w-6xl mx-auto animate-in fade-in slide-in-from-bottom-6 duration-700 pb-20"
    >
        <!-- Header Section -->
        <div
            class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12"
        >
            <div class="space-y-2">
                <div
                    class="flex items-center gap-2 text-[10px] font-black uppercase tracking-[0.2em] text-brand-gold"
                >
                    <span class="w-8 h-px bg-brand-gold"></span>
                    Centro de Soporte
                </div>
                <h2 class="text-5xl font-black text-slate-800 tracking-tighter">
                    Voz del <span class="text-brand-gold italic font-serif"
                        >Cliente</span
                    >
                </h2>
                <p class="text-slate-400 font-medium tracking-tight">
                    Gestiona las dudas y consultas sobre tu catálogo exclusivo.
                </p>
            </div>

            <div class="flex items-center gap-3">
                <div
                    class="bg-white px-6 py-4 rounded-[1.5rem] border border-slate-100 shadow-sm flex items-center gap-4"
                >
                    <div
                        class="w-10 h-10 bg-orange-50 rounded-xl flex items-center justify-center text-orange-500"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <div
                            class="text-[10px] font-black uppercase text-slate-400"
                        >
                            Pendientes
                        </div>
                        <div class="text-2xl font-black text-slate-800">
                            {
                                inquiries?.filter((i) => i.status === "pending")
                                    .length || 0
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {
            error && (
                <div class="bg-red-50 text-red-700 p-6 rounded-3xl mb-10 border border-red-100 flex items-center gap-4 animate-in fade-in slide-in-from-top-4">
                    <span class="text-2xl">!</span>
                    <p class="font-bold">{error.message}</p>
                </div>
            )
        }

        <div class="grid grid-cols-1 gap-8">
            {
                inquiries?.length === 0 ? (
                    <div class="bg-white rounded-[2.5rem] p-20 text-center border-2 border-dashed border-slate-100 space-y-6">
                        <div class="text-xs font-bold text-slate-300">INFO</div>
                        <h3 class="text-2xl font-bold text-slate-800">
                            Bandeja de entrada vacía
                        </h3>
                        <p class="text-slate-400 max-w-sm mx-auto">
                            No hay consultas pendientes de clientes por el
                            momento. ¡Buen trabajo!
                        </p>
                    </div>
                ) : (
                    inquiries?.map((inquiry) => (
                        <div
                            class={`group bg-white rounded-[2.5rem] border transition-all duration-300 hover:shadow-2xl hover:shadow-slate-200/50 ${inquiry.status === "pending" ? "border-brand-gold/30 shadow-lg shadow-brand-gold/5" : "border-slate-100 shadow-sm"}`}
                        >
                            <div class="p-8 md:p-10">
                                <div class="flex flex-col lg:flex-row gap-10">
                                    {/* Visual del Producto */}
                                    <div class="relative w-full lg:w-48 h-48 flex-shrink-0 group-hover:scale-[1.02] transition-transform duration-500">
                                        <img
                                            src={inquiry.product_image}
                                            alt={inquiry.product_name}
                                            class="w-full h-full object-cover rounded-3xl shadow-xl shadow-slate-200 group-hover:shadow-brand-gold/10"
                                        />
                                        <div class="absolute -top-3 -right-3">
                                            <span
                                                class={`flex h-6 w-6 rounded-full ${inquiry.status === "pending" ? "bg-orange-500 shadow-orange-200" : "bg-green-500 shadow-green-200"} shadow-lg border-2 border-white`}
                                            />
                                        </div>
                                    </div>

                                    {/* Contenido de la Consulta */}
                                    <div class="flex-1 space-y-6">
                                        <div class="flex flex-col md:flex-row md:items-start justify-between gap-4">
                                            <div>
                                                <div class="flex items-center gap-3 mb-2">
                                                    <span class="text-xs font-black uppercase tracking-widest text-brand-gold bg-brand-gold/10 px-3 py-1 rounded-lg">
                                                        Referencia de Producto
                                                    </span>
                                                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                                                        #
                                                        {inquiry.id
                                                            .toString()
                                                            .padStart(4, "0")}
                                                    </span>
                                                </div>
                                                <h3 class="text-2xl font-black text-slate-800 tracking-tight mb-2 group-hover:text-brand-gold transition-colors">
                                                    {inquiry.product_name}
                                                </h3>
                                                <div class="flex flex-wrap items-center gap-4 text-xs font-bold text-slate-400 uppercase tracking-widest">
                                                    <div class="flex items-center gap-2">
                                                        <div class="w-6 h-6 rounded-full bg-slate-100 flex items-center justify-center text-slate-500">
                                                            <svg
                                                                class="w-3 h-3"
                                                                fill="none"
                                                                viewBox="0 0 24 24"
                                                                stroke="currentColor"
                                                            >
                                                                <path
                                                                    stroke-linecap="round"
                                                                    stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                                                />
                                                            </svg>
                                                        </div>
                                                        {inquiry.customer_name}
                                                    </div>
                                                    <div class="flex items-center gap-2">
                                                        <div class="w-6 h-6 rounded-full bg-slate-100 flex items-center justify-center text-slate-500">
                                                            <svg
                                                                class="w-3 h-3"
                                                                fill="none"
                                                                viewBox="0 0 24 24"
                                                                stroke="currentColor"
                                                            >
                                                                <path
                                                                    stroke-linecap="round"
                                                                    stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                                                />
                                                            </svg>
                                                        </div>
                                                        {inquiry.customer_email}
                                                    </div>
                                                </div>
                                            </div>

                                            <div
                                                class={`px-4 py-2 rounded-2xl border flex items-center gap-2 shrink-0 ${statusColors[inquiry.status as keyof typeof statusColors]}`}
                                            >
                                                <div class="w-2 h-2 rounded-full bg-current animate-pulse" />
                                                <span class="text-[10px] font-black uppercase tracking-widest">
                                                    {inquiry.status ===
                                                    "pending"
                                                        ? "Pendiente"
                                                        : inquiry.status ===
                                                            "answered"
                                                          ? "Gestionada"
                                                          : "Cerrada"}
                                                </span>
                                            </div>
                                        </div>

                                        <div class="space-y-4 max-h-[400px] overflow-y-auto pr-4 custom-scrollbar bg-slate-50/50 p-6 rounded-[2rem] border border-slate-100 shadow-inner">
                                            {inquiry.messages?.map(
                                                (msg: any) => (
                                                    <div
                                                        class={`flex flex-col ${msg.sender_role === "admin" ? "items-end" : "items-start"}`}
                                                    >
                                                        <div
                                                            class={`max-w-[80%] px-6 py-4 rounded-[2rem] text-sm font-medium shadow-sm border ${
                                                                msg.sender_role ===
                                                                "admin"
                                                                    ? "bg-slate-900 text-white border-slate-800 rounded-tr-none"
                                                                    : "bg-white text-slate-700 border-slate-100 rounded-tl-none"
                                                            }`}
                                                        >
                                                            {msg.message}
                                                            <div
                                                                class={`text-[8px] mt-2 font-black uppercase tracking-widest ${
                                                                    msg.sender_role ===
                                                                    "admin"
                                                                        ? "text-brand-gold"
                                                                        : "text-slate-400"
                                                                }`}
                                                            >
                                                                {msg.sender_role ===
                                                                "admin"
                                                                    ? "Administración"
                                                                    : "Cliente"}{" "}
                                                                •{" "}
                                                                {formatDate(
                                                                    msg.created_at,
                                                                )}
                                                            </div>
                                                        </div>
                                                    </div>
                                                ),
                                            )}
                                            {(!inquiry.messages ||
                                                inquiry.messages.length ===
                                                    0) && (
                                                <p class="text-slate-400 italic text-center py-4">
                                                    Iniciando conversación...
                                                </p>
                                            )}
                                        </div>

                                        <div class="flex flex-wrap items-center gap-6 pt-4 border-t border-slate-50">
                                            <div class="flex items-center gap-2 text-[10px] font-black text-slate-400 uppercase tracking-widest">
                                                <svg
                                                    class="w-4 h-4"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                                                    />
                                                </svg>
                                                Recibida:{" "}
                                                {formatDate(inquiry.created_at)}
                                            </div>
                                            {inquiry.responded_at && (
                                                <div class="flex items-center gap-2 text-[10px] font-black text-brand-gold uppercase tracking-widest">
                                                    <svg
                                                        class="w-4 h-4"
                                                        fill="none"
                                                        viewBox="0 0 24 24"
                                                        stroke="currentColor"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                                        />
                                                    </svg>
                                                    Resuelta:{" "}
                                                    {formatDate(
                                                        inquiry.responded_at,
                                                    )}
                                                </div>
                                            )}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {/* Botonera de Acción Premium */}
                            <div class="px-10 py-6 bg-slate-50/50 rounded-b-[2.5rem] border-t border-slate-100 flex items-center justify-between">
                                <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                                    {inquiry.status === "pending"
                                        ? "Requiere acción inmediata"
                                        : "Consulta auditada por administración"}
                                </p>
                                <div class="flex items-center gap-4">
                                    <button class="px-6 py-3 rounded-xl text-xs font-bold text-slate-400 hover:text-slate-600 hover:bg-slate-100 transition-all">
                                        Archivar
                                    </button>
                                    <button
                                        class="px-8 py-3 bg-slate-900 text-white rounded-xl text-xs font-bold shadow-xl shadow-slate-900/10 hover:bg-brand-gold hover:-translate-y-0.5 transition-all"
                                        onclick={`window.handleResponse(${inquiry.id})`}
                                    >
                                        {inquiry.status === "pending"
                                            ? "Redactar Respuesta"
                                            : "Modificar Respuesta"}
                                    </button>
                                </div>
                            </div>
                        </div>
                    ))
                )
            }
        </div>
    </div>
</AdminLayout>

<script>
    import { supabase } from "../../lib/supabase";

    // @ts-ignore
    window.handleResponse = async (id: number) => {
        const response = prompt("Introduce tu respuesta al cliente:");
        if (!response) return;

        try {
            // 1. Insertar el mensaje en el hilo
            const { error: msgError } = await supabase
                .from("inquiry_messages")
                .insert({
                    inquiry_id: id,
                    sender_role: "admin",
                    message: response,
                });

            if (msgError) throw msgError;

            // 2. Actualizar el estado de la consulta y marcar como no leída para el cliente
            const { error: inquiryError } = await supabase
                .from("product_inquiries")
                .update({
                    status: "answered",
                    responded_at: new Date().toISOString(),
                    customer_has_unread: true,
                })
                .eq("id", id);

            if (inquiryError) throw inquiryError;

            location.reload();
        } catch (error: any) {
            alert("Error al guardar la respuesta: " + error.message);
        }
    };
</script>
