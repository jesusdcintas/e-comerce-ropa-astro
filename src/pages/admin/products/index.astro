<script>
    import { supabase } from "../../../lib/supabase";

    // Selección de productos
    const selectAllCheckbox = document.getElementById(
        "select-all",
    ) as HTMLInputElement;
    const productCheckboxes = document.querySelectorAll(
        ".product-checkbox",
    ) as NodeListOf<HTMLInputElement>;
    const applyDiscountBtn = document.getElementById(
        "apply-discount-btn",
    ) as HTMLButtonElement;
    const discountModal = document.getElementById("discount-modal");
    const discountForm = document.getElementById(
        "discount-form",
    ) as HTMLFormElement;
    const cancelDiscountBtn = document.getElementById("cancel-discount");

    // Select all
    selectAllCheckbox?.addEventListener("change", () => {
        productCheckboxes.forEach((cb) => {
            cb.checked = selectAllCheckbox.checked;
        });
        updateApplyButton();
    });

    // Individual checkboxes
    productCheckboxes.forEach((cb) => {
        cb.addEventListener("change", () => {
            updateApplyButton();
            const allChecked = Array.from(productCheckboxes).every(
                (c) => c.checked,
            );
            const someChecked = Array.from(productCheckboxes).some(
                (c) => c.checked,
            );
            if (selectAllCheckbox) {
                selectAllCheckbox.checked = allChecked;
                selectAllCheckbox.indeterminate = someChecked && !allChecked;
            }
        });
    });

    function updateApplyButton() {
        const selectedCount = Array.from(productCheckboxes).filter(
            (c) => c.checked,
        ).length;
        if (applyDiscountBtn) {
            applyDiscountBtn.disabled = selectedCount === 0;
            applyDiscountBtn.textContent =
                selectedCount > 0
                    ? `Aplicar Oferta (${selectedCount})`
                    : "Aplicar Oferta";
        }
    }

    // Abrir modal
    applyDiscountBtn?.addEventListener("click", () => {
        discountModal?.classList.remove("hidden");
    });

    // Cerrar modal
    cancelDiscountBtn?.addEventListener("click", () => {
        discountModal?.classList.add("hidden");
        discountForm?.reset();
    });

    // Enviar formulario
    discountForm?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const selectedIds = Array.from(productCheckboxes)
            .filter((c) => c.checked)
            .map((c) => parseInt(c.value));

        const discountPercentage = parseInt(
            (document.getElementById("discount-percentage") as HTMLInputElement)
                .value,
        );
        const endsAtInput = (
            document.getElementById("discount-ends-at") as HTMLInputElement
        ).value;
        const endsAt = endsAtInput ? new Date(endsAtInput).toISOString() : null;

        try {
            const response = await fetch("/api/apply-discount", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    productIds: selectedIds,
                    discountPercentage,
                    endsAt,
                }),
            });

            const result = await response.json();

            if (result.success) {
                // @ts-ignore
                window.showCustomModal({
                    title: "Oferta Aplicada",
                    message: result.message,
                    type: "info",
                });
                // Pequeño delay para que el usuario vea el modal
                setTimeout(() => window.location.reload(), 1500);
            } else {
                // @ts-ignore
                window.showCustomModal({
                    title: "Error",
                    message: "Error: " + result.error,
                    type: "alert",
                });
            }
        } catch (error) {
            // @ts-ignore
            window.showCustomModal({
                title: "Error de Aplicación",
                message:
                    "Hubo un problema al intentar aplicar el descuento masivo.",
                type: "alert",
            });
            console.error(error);
        }
    });

    // Buscador de productos
    const searchInput = document.getElementById(
        "product-search",
    ) as HTMLInputElement;
    const productRows = document.querySelectorAll(
        ".product-row",
    ) as NodeListOf<HTMLElement>;

    searchInput?.addEventListener("input", (e) => {
        const term = (e.target as HTMLInputElement).value.toLowerCase().trim();

        productRows.forEach((row) => {
            const name =
                row
                    .querySelector(".text-sm.font-bold")
                    ?.textContent?.toLowerCase() || "";
            const desc =
                row
                    .querySelector(".text-xs.text-slate-400")
                    ?.textContent?.toLowerCase() || "";

            if (name.includes(term) || desc.includes(term)) {
                row.classList.remove("hidden");
            } else {
                row.classList.add("hidden");
            }
        });

        // Actualizar contador si fuera necesario o mostrar mensaje de "no resultados"
    });

    document.querySelectorAll(".product-row").forEach((row) => {
        row.addEventListener("click", (e) => {
            const target = e.target as HTMLElement;
            if (
                target.closest(".action-cell") ||
                target.closest('input[type="checkbox"]')
            )
                return;

            const productId = (row as HTMLElement).dataset.productId;
            if (productId) {
                window.location.href = `/admin/products/view/${productId}`;
            }
        });
    });

    // Lógica de Restock Rápido
    const restockModal = document.getElementById("restock-modal");
    const restockContainer = document.getElementById(
        "restock-variants-container",
    );
    const restockProductName = document.getElementById("restock-product-name");
    const closeRestockBtn = document.getElementById("close-restock");
    const finishRestockBtn = document.getElementById("finish-restock");

    // @ts-ignore
    window.openRestockModal = async (
        productId: number,
        productName: string,
    ) => {
        if (restockProductName) restockProductName.textContent = productName;
        restockModal?.classList.remove("hidden");
        if (restockContainer) {
            restockContainer.innerHTML =
                '<div class="flex items-center justify-center py-10"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-brand-gold"></div></div>';

            try {
                const { data: variants, error } = await supabase
                    .from("product_variants")
                    .select("*")
                    .eq("product_id", productId)
                    .order("size");

                if (error) throw error;

                if (!variants || variants.length === 0) {
                    restockContainer.innerHTML =
                        '<p class="text-center py-10 text-slate-400 font-bold text-xs uppercase">Sin variantes configuradas</p>';
                    return;
                }

                restockContainer.innerHTML = variants
                    .map(
                        (v: any) => `
                    <div class="flex items-center justify-between p-4 bg-slate-50 border border-slate-100 rounded-2xl group transition-all">
                        <div>
                            <p class="text-xs font-black text-slate-800">${v.size}</p>
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tighter" id="stock-val-${v.id}">${v.stock} uds actuales</p>
                        </div>
                        <div class="flex items-center gap-2">
                            <input 
                                type="number" 
                                id="input-restock-${v.id}" 
                                placeholder="0" 
                                class="w-20 px-3 py-2 bg-white border border-slate-200 rounded-xl text-xs font-bold focus:ring-2 focus:ring-brand-gold/20 outline-none transition-all"
                            />
                            <button 
                                onclick="const qty = parseInt(document.getElementById('input-restock-${v.id}').value); if(!isNaN(qty) && qty > 0) { window.submitRestock(${v.id}, ${productId}, qty); document.getElementById('input-restock-${v.id}').value = ''; }" 
                                class="px-4 py-2 bg-slate-900 text-white rounded-xl text-[10px] font-black hover:bg-brand-gold transition-all"
                            >
                                Sumar
                            </button>
                        </div>
                    </div>
                `,
                    )
                    .join("");
            } catch (err: any) {
                restockContainer.innerHTML = `<p class="text-center py-10 text-red-500 font-bold text-xs uppercase">Error: ${err.message}</p>`;
            }
        }
    };

    // @ts-ignore
    window.submitRestock = async (
        variantId: number,
        productId: number,
        quantity: number,
    ) => {
        try {
            const res = await fetch("/api/admin/inventory", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ variantId, productId, quantity }),
            });

            const data = await res.json();
            if (data.success) {
                const display = document.getElementById(
                    `stock-val-${variantId}`,
                );
                if (display) {
                    display.textContent = `${data.newStock} uds actuales`;
                    display.classList.add("text-brand-gold");
                    setTimeout(
                        () => display.classList.remove("text-brand-gold"),
                        1500,
                    );
                }
                // @ts-ignore
                window.addToast?.(`+${quantity} unidades añadidas`, "success");
            } else {
                throw new Error(data.error);
            }
        } catch (err: any) {
            // @ts-ignore
            window.addToast?.("Error: " + err.message, "error");
        }
    };

    closeRestockBtn?.addEventListener("click", () =>
        restockModal?.classList.add("hidden"),
    );
    finishRestockBtn?.addEventListener("click", () => window.location.reload());
</script>
