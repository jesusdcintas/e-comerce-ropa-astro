import AdminLayout from "../../../layouts/AdminLayout.astro";
import { supabase } from "../../../lib/supabase";

// Parámetros de la URL
const categorySlug = Astro.url.searchParams.get("category");
const sortBy = Astro.url.searchParams.get("sort") || "created_at";
const order = Astro.url.searchParams.get("order") || "desc";

// Configuración de ordenación para Supabase
const stockFilter = Astro.url.searchParams.get("stock");
const isAsc = order === "asc";

// Obtener todas las categorías
const { data: allCategories } = await supabase
    .from("categories")
    .select("*")
    .order("name");

let currentCategory: any = null;
let subcategories: any[] = [];
let products: any[] = [];
let title = "Todos los Productos";

if (stockFilter === "low") {
    title = "Productos con Stock Bajo";
} else if (stockFilter === "out") {
    title = "Productos Agotados";
}

if (categorySlug) {
    // Buscar la categoría actual
    currentCategory = allCategories?.find((cat) => cat.slug === categorySlug);

    if (currentCategory) {
        title = currentCategory.name;

        // Función para obtener todos los IDs de subcategorías de forma recursiva (todos los niveles)
        const getRecursiveCategoryIds = (
            parentId: number,
            cats: any[],
        ): number[] => {
            const childIds = cats
                .filter((c) => c.parent_id === parentId)
                .map((c) => c.id);
            let allIds = [...childIds];
            for (const id of childIds) {
                allIds = [...allIds, ...getRecursiveCategoryIds(id, cats)];
            }
            return allIds;
        };

        const allDescendantIds = getRecursiveCategoryIds(
            currentCategory.id,
            allCategories || [],
        );
        const targetCategoryIds = [currentCategory.id, ...allDescendantIds];

        // Obtener productos de la categoría y todas sus descendientes
        let query = supabase
            .from("products")
            .select(
                "*, categories:categories(name, slug), product_variants(stock)",
            )
            .in("category_id", targetCategoryIds)
            .order(sortBy, { ascending: isAsc });

        if (stockFilter === "low") {
            query = query
                .select(
                    "*, categories:categories(name, slug), product_variants!inner(stock)",
                )
                .lt("product_variants.stock", 3)
                .gt("product_variants.stock", 0);
        } else if (stockFilter === "out") {
            query = query
                .select(
                    "*, categories:categories(name, slug), product_variants!inner(stock)",
                )
                .eq("product_variants.stock", 0);
        }

        const { data: catProducts } = await query;
        products =
            catProducts?.map((p) => ({
                ...p,
                stock:
                    (p.product_variants as any[])?.reduce(
                        (acc, v) => acc + (v.stock || 0),
                        0,
                    ) || 0,
            })) || [];
    }
} else {
    // Obtener todos los productos con filtro de stock opcional
    let query = supabase
        .from("products")
        .select("*, categories:categories(name, slug), product_variants(stock)")
        .order(sortBy, { ascending: isAsc });

    if (stockFilter === "low") {
        query = query
            .select(
                "*, categories:categories(name, slug), product_variants!inner(stock)",
            )
            .lt("product_variants.stock", 3)
            .gt("product_variants.stock", 0);
    } else if (stockFilter === "out") {
        query = query
            .select(
                "*, categories:categories(name, slug), product_variants!inner(stock)",
            )
            .eq("product_variants.stock", 0);
    }

    const { data: allProducts } = await query;
    products =
        allProducts?.map((p) => ({
            ...p,
            stock:
                (p.product_variants as any[])?.reduce(
                    (acc, v) => acc + (v.stock || 0),
                    0,
                ) || 0,
        })) || [];
}

const formatPrice = (cents: number) => (cents / 100).toFixed(2);

// Función para generar URLs de ordenación
function getSortUrl(column: string) {
    const params = new URLSearchParams(Astro.url.searchParams);
    if (sortBy === column) {
        params.set("order", order === "asc" ? "desc" : "asc");
    } else {
        params.set("sort", column);
        params.set("order", "asc");
    }
    return `?${params.toString()}`;
}

function getSortIcon(column: string) {
    if (sortBy !== column) return "[^]";
    return order === "asc" ? "↑" : "↓";
}
