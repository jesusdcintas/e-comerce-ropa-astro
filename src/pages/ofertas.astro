---
import BaseLayout from "../layouts/BaseLayout.astro";
import { supabase } from "../lib/supabase";
import ProductCard from "../components/ProductCard.astro";

// Limpiar descuentos expirados
await supabase.rpc('cleanup_expired_discounts');

// Obtener productos con descuento activo
const { data: products } = await supabase
  .from("products")
  .select(`
    *,
    category:categories(name, slug),
    product_variants(*)
  `)
  .gt('discount_percentage', 0)
  .or('discount_ends_at.is.null,discount_ends_at.gt.' + new Date().toISOString())
  .order("discount_percentage", { ascending: false });

function calculateDiscountedPrice(price: number, discount: number): number {
  return Math.round(price * (1 - discount / 100));
}
---

<BaseLayout title="Ofertas - FashionStore">
  <div class="max-w-7xl mx-auto px-4 py-16">
    <!-- Header -->
    <div class="text-center mb-12">
      <div
        class="flex items-center justify-center gap-2 text-[10px] font-black uppercase tracking-[0.2em] text-brand-gold mb-4"
      >
        <span class="w-8 h-px bg-brand-gold"></span>
        Descuentos Exclusivos
        <span class="w-8 h-px bg-brand-gold"></span>
      </div>
      <h1 class="text-4xl md:text-5xl font-black text-slate-800 tracking-tighter mb-3">
        <span class="text-brand-gold italic font-serif">Ofertas</span> Temporales
      </h1>
      <p class="text-slate-400 font-medium text-lg">
        Aprovecha nuestros mejores descuentos antes de que terminen
      </p>
    </div>

    {!products || products.length === 0 ? (
      <div class="text-center py-20">
        <div class="w-24 h-24 mx-auto bg-gray-100 rounded-full flex items-center justify-center mb-6">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-700 mb-2">No hay ofertas disponibles</h2>
        <p class="text-gray-500 mb-6">Vuelve pronto para ver nuestras próximas ofertas</p>
        <a href="/" class="inline-block bg-brand-black text-white px-6 py-3 rounded-lg hover:bg-gray-800 transition">
          Ver catálogo completo
        </a>
      </div>
    ) : (
      <>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {products.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>

        <div class="mt-12 text-center">
          <a 
            href="/" 
            class="inline-flex items-center gap-2 text-brand-blue hover:text-brand-gold transition-colors font-medium"
          >
            Ver todos los productos
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </>
    )}
  </div>
</BaseLayout>
