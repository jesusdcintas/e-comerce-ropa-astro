---
import FavoriteButton from "./islands/FavoriteButton";

interface Props {
    product: any;
}

const { product } = Astro.props;

const formatPrice = (cents: number) => {
    return `${(cents / 100).toFixed(2)}€`;
};

const calculateDiscountedPrice = (price: number, discount: number) => {
    return Math.round(price * (1 - discount / 100));
};

// Configuración global (Cargar una vez para todas las tarjetas mediante Astro.props o caché si fuera posible, pero aquí lo haremos simple)
import { supabase } from "../lib/supabase";
const { data: globalConfig } = await supabase
    .from("site_config")
    .select("*")
    .single();
const globalOffersEnabled = globalConfig?.offers_enabled !== false;
const globalNovedadesEnabled = globalConfig?.novedades_enabled !== false;

const hasActiveDiscount =
    globalOffersEnabled &&
    product.discount_percentage > 0 &&
    (!product.discount_ends_at ||
        new Date(product.discount_ends_at) > new Date());

const finalPrice = hasActiveDiscount
    ? calculateDiscountedPrice(product.price, product.discount_percentage)
    : product.price;

const isNewArrival = globalNovedadesEnabled && product.is_new_arrival;

const mainImage =
    Array.isArray(product.images) && product.images.length > 0
        ? product.images[0]
        : "/placeholder.jpg";
---

<div
    class="group bg-white rounded-sm overflow-hidden hover:shadow-xl transition-all duration-300 flex flex-col h-full border border-gray-100 relative"
>
    <!-- Botón de Favoritos (Flotante) -->
    <div class="absolute top-3 right-3 z-20 transition-opacity duration-300">
        <FavoriteButton
            client:load
            productId={product.id.toString()}
            variant="icon"
        />
    </div>

    <!-- Imagen con link al detalle -->
    <a
        href={`/producto/${product.slug}`}
        class="relative block aspect-[3/4] overflow-hidden bg-white"
    >
        <img
            src={mainImage}
            alt={product.name}
            class="absolute inset-0 w-full h-full object-contain p-4 group-hover:scale-110 transition-transform duration-500"
            loading="lazy"
        />
        {
            hasActiveDiscount && (
                <div class="absolute top-3 left-3 z-10 flex flex-col gap-2">
                    <span class="bg-red-600 text-white px-3 py-1 text-xs font-bold rounded-full">
                        -{product.discount_percentage}%
                    </span>
                    {isNewArrival && (
                        <span class="bg-brand-gold text-white px-3 py-1 text-xs font-bold rounded-full">
                            NUEVO
                        </span>
                    )}
                </div>
            )
        }
        {
            !hasActiveDiscount && isNewArrival && (
                <div class="absolute top-3 left-3 z-10">
                    <span class="bg-brand-gold text-white px-3 py-1 text-xs font-bold rounded-full">
                        NUEVO
                    </span>
                </div>
            )
        }
        {
            product.stock === 0 && (
                <div class="absolute inset-0 bg-black/50 flex items-center justify-center z-10">
                    <span class="bg-white text-black px-4 py-2 font-bold text-sm">
                        AGOTADO
                    </span>
                </div>
            )
        }
    </a>

    <!-- Información -->
    <div class="p-4 flex flex-col flex-grow">
        <div class="mb-auto">
            <p
                class="text-[10px] text-gray-500 mb-1 uppercase tracking-widest font-bold"
            >
                {product.category?.name}
            </p>
            <a href={`/producto/${product.slug}`}>
                <h3
                    class="font-semibold text-sm mb-2 line-clamp-2 hover:text-brand-blue transition-colors min-h-[2.5rem]"
                >
                    {product.name}
                </h3>
            </a>
            <div class="flex items-center justify-between mt-auto">
                <div class="flex flex-col">
                    {
                        hasActiveDiscount ? (
                            <>
                                <p class="text-xs text-gray-400 line-through">
                                    {formatPrice(product.price)}
                                </p>
                                <p class="text-base font-bold text-red-600">
                                    {formatPrice(finalPrice)}
                                </p>
                            </>
                        ) : (
                            <p class="text-base font-bold text-brand-black">
                                {formatPrice(product.price)}
                            </p>
                        )
                    }
                </div>
                <span
                    class="text-[10px] text-brand-blue font-bold tracking-tighter border border-brand-blue px-1 uppercase"
                >
                    Ver detalle
                </span>
            </div>
        </div>
    </div>
</div>
