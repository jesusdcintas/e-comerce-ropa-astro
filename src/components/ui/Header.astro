        </div>

        <div class="flex items-center gap-0.5 sm:gap-2">
          <!-- Favoritos -->
          <a
            href="/favoritos"
            class="p-2 rounded-full hover:bg-slate-50 relative group transition-colors cursor-pointer"
            title="Favoritos"
          >
            <svg
              class="w-5 h-5 text-slate-700 group-hover:text-red-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.8"
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
              ></path></svg
            >
            <HeaderCounter client:load type="favorite" />
          </a>

          <!-- Perfil PC -->
          <div class="relative hidden lg:block">
            {
              user ? (
                <div class="relative">
                  <button
                    id="profile-trigger"
                    class="flex items-center focus:outline-none p-1 relative z-[100] cursor-pointer"
                  >
                    <div class="w-8 h-8 rounded-full bg-slate-200/50 border border-slate-200 flex items-center justify-center hover:border-brand-gold transition-colors pointer-events-none shadow-sm">
                      <span class="text-xs font-black text-slate-800 uppercase">
                        {userName.charAt(0)}
                      </span>
                    </div>
                    <div class="pointer-events-none">
                      <HeaderCounter client:load type="notification" />
                    </div>
                  </button>
                  <div
