<script>
  import { supabase } from "../../lib/supabase";
  import { isCartOpen } from "../../stores/cartStore";

  function handleHeader() {
    const pTrigger = document.getElementById("profile-trigger");
    const pDropdown = document.getElementById("profile-dropdown");
    const navTriggers = document.querySelectorAll(".nav-trigger");
    const pcInput = document.getElementById("search-input") as HTMLInputElement;
    const pcResults = document.getElementById("search-results");
    const pcContent = document.getElementById("search-results-content");

    const accTrigger = document.getElementById("mobile-account-trigger");
    const accSheet = document.getElementById("account-sheet");
    const accOverlay = document.getElementById("account-sheet-overlay");

    const sTrigger = document.getElementById("mobile-search-trigger");
    const sOverlay = document.getElementById("mobile-search-overlay");
    const sClose = document.getElementById("close-search");
    const sInput = document.getElementById(
      "mobile-search-input",
    ) as HTMLInputElement;
    const sResults = document.getElementById("mobile-search-results-content");

    const formatPrice = (cents: number) => {
      return new Intl.NumberFormat("es-ES", {
        style: "currency",
        currency: "EUR",
      }).format(cents / 100);
    };

    const closeAll = () => {
      document
        .querySelectorAll(".nav-dropdown")
        .forEach((d) => d.classList.add("hidden"));
      pDropdown?.classList.add("hidden");
    };

    const performSearch = async (
      query: string,
      container: HTMLElement,
      resultsDiv?: HTMLElement,
    ) => {
      if (!query || query.trim().length < 2) {
        if (resultsDiv) resultsDiv.classList.add("hidden");
        return;
      }
      try {
        const response = await fetch(
          `/api/search.json?q=${encodeURIComponent(query)}`,
        );
        const data = await response.json();
        if (!data.success || !data.results || data.results.length === 0) {
          container.innerHTML = `<div class="px-4 py-3 text-sm text-gray-500 text-center">No se encontraron productos</div>`;
        } else {
          container.innerHTML = data.results
            .map(
              (p: any) => `
            <a href="/producto/${p.slug}" class="flex items-center gap-3 px-4 py-3 hover:bg-gray-50 transition-colors border-b border-gray-100 last:border-0">
              <img src="${p.images?.[0] || ""}" class="w-12 h-12 object-cover rounded shadow-sm" />
              <div class="flex-1 min-w-0">
                <p class="text-xs font-bold text-gray-900 leading-tight truncate">${p.name}</p>
                <p class="text-xs text-brand-gold mt-1 font-bold">${formatPrice(p.price)}</p>
              </div>
            </a>
          `,
            )
            .join("");
        }
        if (resultsDiv) resultsDiv.classList.remove("hidden");
      } catch (error) {
        console.error("Search error:", error);
      }
    };

    let pcTimeout: any;
    pcInput?.addEventListener("input", () => {
      clearTimeout(pcTimeout);
      pcTimeout = setTimeout(
        () => performSearch(pcInput.value, pcContent!, pcResults!),
        300,
      );
    });

    if (pTrigger) {
      pTrigger.onclick = (e) => {
        e.stopPropagation();
        const isH = pDropdown?.classList.contains("hidden");
        closeAll();
        if (isH) pDropdown?.classList.remove("hidden");
      };
    }

    navTriggers.forEach((t) => {
      (t as HTMLElement).onclick = (e) => {
        e.stopPropagation();
        const key = t.getAttribute("data-trigger");
        const menu = document.querySelector(`[data-menu="${key}"]`);
        const wasOpen = !menu?.classList.contains("hidden");
        closeAll();
        if (!wasOpen) menu?.classList.remove("hidden");
      };
    });

    const openSheet = () => {
      accSheet?.classList.remove("translate-y-full");
      accOverlay?.classList.remove("hidden");
      setTimeout(() => accOverlay?.classList.add("opacity-100"), 10);
      document.body.style.overflow = "hidden";
    };
    const closeSheet = () => {
      accSheet?.classList.add("translate-y-full");
      accOverlay?.classList.remove("opacity-100");
      setTimeout(() => accOverlay?.classList.add("hidden"), 300);
      document.body.style.overflow = "";
    };
    accTrigger?.addEventListener("click", openSheet);
    accOverlay?.addEventListener("click", closeSheet);

    sTrigger?.addEventListener("click", () => {
      sOverlay?.classList.remove("translate-y-full");
      document.body.style.overflow = "hidden";
      setTimeout(() => sInput?.focus(), 500);
    });
    sClose?.addEventListener("click", () => {
      sOverlay?.classList.add("translate-y-full");
      document.body.style.overflow = "";
    });

    let mTimeout: any;
    sInput?.addEventListener("input", () => {
      clearTimeout(mTimeout);
      mTimeout = setTimeout(() => performSearch(sInput.value, sResults!), 300);
    });

    document.querySelectorAll(".logout-action").forEach((btn) => {
      btn.addEventListener("click", async () => {
        await supabase.auth.signOut();
        import("../../stores/cartStore").then((m) => m.clearCart());
        import("../../stores/favoriteStore").then((m) => m.clearFavorites());
        document.cookie = "sb-access-token=; Path=/; Max-Age=0; SameSite=Lax";
        document.cookie = "sb-refresh-token=; Path=/; Max-Age=0; SameSite=Lax";
        window.location.href = "/";
      });
    });

    document
      .getElementById("cart-button")
      ?.addEventListener("click", () => isCartOpen.set(true));

    window.onclick = (e) => {
      const target = e.target as Node;
      if (
        pDropdown &&
        !pDropdown.contains(target) &&
        !pTrigger?.contains(target)
      )
        pDropdown.classList.add("hidden");
      if (
        pcResults &&
        !pcResults.contains(target) &&
        !pcInput?.contains(target)
      )
        pcResults.classList.add("hidden");
    };
  }

  document.addEventListener("DOMContentLoaded", handleHeader);
  document.addEventListener("astro:after-swap", handleHeader);
  if (document.readyState !== "loading") handleHeader();
</script>
