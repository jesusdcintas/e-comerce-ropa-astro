      <button
        id="close-search"
        class="p-2 text-slate-400 hover:text-brand-black transition-colors"
      >
        <svg
          class="w-8 h-8"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path d="M6 18L18 6M6 6l12 12" stroke-width="2.5"></path></svg
        >
      </button>
    </div>
    <input
      id="mobile-search-input"
      type="text"
      placeholder="¿Qué buscas hoy?"
      class="w-full text-3xl font-serif font-black border-b-2 border-slate-100 focus:border-brand-gold bg-transparent py-4 focus:outline-none transition-colors"
      autocomplete="off"
    />
    <div
      id="mobile-search-results-content"
      class="flex-1 overflow-y-auto custom-scrollbar mt-6 space-y-4 pb-20"
    >
    </div>
  </div>
</div>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  .animate-marquee {
    display: inline-block;
    padding-left: 100%;
    animation: marquee 30s linear infinite;
  }
  .animate-slide-up {
    animation: slideUp 0.35s cubic-bezier(0.16, 1, 0.3, 1);
  }
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .safe-area-bottom {
    padding-bottom: calc(0.75rem + env(safe-area-inset-bottom, 0px));
  }
</style>

<script>
  import { supabase } from "../../lib/supabase";
  import { isCartOpen } from "../../stores/cartStore";

  function handleHeader() {
    // --- Referencias ---
    const pTrigger = document.getElementById("profile-trigger");
    const pDropdown = document.getElementById("profile-dropdown");
    const navTriggers = document.querySelectorAll(".nav-trigger");

    // Bottom Sheet
    const accTrigger = document.getElementById("mobile-account-trigger");
    const accSheet = document.getElementById("account-sheet");
    const accOverlay = document.getElementById("account-sheet-overlay");

    // Search
    const sTrigger = document.getElementById("mobile-search-trigger");
    const sOverlay = document.getElementById("mobile-search-overlay");
    const sClose = document.getElementById("close-search");
    const sInput = document.getElementById(
      "mobile-search-input",
    ) as HTMLInputElement;
    const sResults = document.getElementById("mobile-search-results-content");

    const formatPrice = (cents: number) => {
      return new Intl.NumberFormat("es-ES", {
        style: "currency",
        currency: "EUR",
      }).format(cents / 100);
    };

    const closeAll = () => {
      document
        .querySelectorAll(".nav-dropdown")
        .forEach((d) => d.classList.add("hidden"));
      pDropdown?.classList.add("hidden");
    };

    // LOGICA PC
    if (pTrigger) {
      pTrigger.onclick = (e) => {
        e.stopPropagation();
        const isH = pDropdown?.classList.contains("hidden");
        closeAll();
        if (isH) pDropdown?.classList.remove("hidden");
      };
    }

    navTriggers.forEach((t) => {
      (t as HTMLElement).onclick = (e) => {
        e.stopPropagation();
        const key = t.getAttribute("data-trigger");
        const menu = document.querySelector(`[data-menu="${key}"]`);
        const wasOpen = !menu?.classList.contains("hidden");
        closeAll();
        if (!wasOpen) menu?.classList.remove("hidden");
      };
    });

    // LOGICA MÓVIL: Account Sheet
    const openSheet = () => {
      accSheet?.classList.remove("translate-y-full");
      accOverlay?.classList.remove("hidden");
      setTimeout(() => accOverlay?.classList.add("opacity-100"), 10);
      document.body.style.overflow = "hidden";
    };
    const closeSheet = () => {
      accSheet?.classList.add("translate-y-full");
      accOverlay?.classList.remove("opacity-100");
      setTimeout(() => accOverlay?.classList.add("hidden"), 300);
      document.body.style.overflow = "";
    };

    accTrigger?.addEventListener("click", openSheet);
    accOverlay?.addEventListener("click", closeSheet);

    // LOGICA MÓVIL: Search
    sTrigger?.addEventListener("click", () => {
      sOverlay?.classList.remove("translate-y-full");
      document.body.style.overflow = "hidden";
      setTimeout(() => sInput?.focus(), 500);
    });
    sClose?.addEventListener("click", () => {
      sOverlay?.classList.add("translate-y-full");
      document.body.style.overflow = "";
    });

    // Búsqueda en vivo (Motor PC/Móvil)
    sInput?.addEventListener("input", async () => {
      const query = sInput.value.trim();
      if (query.length < 2) return;

      const res = await fetch(
        `/api/search.json?q=${encodeURIComponent(query)}`,
      );
      const data = await res.json();
      if (data.success && sResults) {
        sResults.innerHTML = data.results
          .map(
            (p: any) => `
          <a href="/producto/${p.slug}" class="flex items-center gap-4 p-4 bg-slate-50 rounded-2xl active:bg-slate-100">
            <img src="${p.images?.[0] || ""}" class="w-16 h-16 object-cover rounded-xl shadow-sm" />
            <div>
              <p class="text-sm font-black text-slate-900 leading-tight">${p.name}</p>
              <p class="text-xs text-brand-gold font-bold mt-1">${formatPrice(p.price)}</p>
            </div>
          </a>
        `,
          )
          .join("");
      }
    });

    // Logout Común
    document.querySelectorAll(".logout-action").forEach((btn) => {
      btn.addEventListener("click", async () => {
        await supabase.auth.signOut();
        document.cookie = "sb-access-token=; Path=/; Max-Age=0";
        window.location.href = "/";
      });
    });

    // Carrito
    document
      .getElementById("cart-button")
      ?.addEventListener("click", () => isCartOpen.set(true));

    // Cierre global PC
    window.onclick = (e) => {
      const target = e.target as Node;
      if (
        pDropdown &&
        !pDropdown.contains(target) &&
        !pTrigger?.contains(target)
      )
        pDropdown.classList.add("hidden");
    };
  }

  document.addEventListener("DOMContentLoaded", handleHeader);
  document.addEventListener("astro:after-swap", handleHeader);
  if (document.readyState !== "loading") handleHeader();
</script>
