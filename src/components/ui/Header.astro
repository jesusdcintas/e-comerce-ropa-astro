        <!-- Buscador PC -->
        <div class="relative hidden lg:block">
          <div
            class="flex items-center h-10 px-4 bg-slate-50 border border-slate-100 rounded-full w-44 lg:w-60 focus-within:bg-white transition-all shadow-sm"
          >
            <svg
              class="w-4 h-4 text-slate-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg
            >
            <input
