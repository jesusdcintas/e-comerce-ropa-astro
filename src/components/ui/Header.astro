---
interface Props {}

import { supabase } from "../../lib/supabase";
import HeaderCounter from "../islands/HeaderCounter";

const accessToken = Astro.cookies.get("sb-access-token")?.value;
let user = null;

if (accessToken) {
  try {
    const { data } = await supabase.auth.getUser(accessToken);
    if (data?.user) {
      user = data.user;
    }
  } catch (error) {
    // Token inválido
  }
}

const userName =
  user?.user_metadata?.name || user?.email?.split("@")[0] || "Usuario";

// Lógica para detectar página activa
const pathname = Astro.url.pathname;
const isHome = pathname === "/";
const isCatalogo = pathname.startsWith("/catalogo");
const isOfertas = pathname.startsWith("/ofertas");
const isAdmin = pathname.startsWith("/admin");
const isAccount =
  pathname.startsWith("/mi-cuenta") ||
  pathname.startsWith("/mensajes") ||
  pathname.startsWith("/mis-pedidos") ||
  pathname.startsWith("/mis-cupones");
---

<!-- Marquee Superior -->
<div
  class="bg-brand-black text-white py-2 text-center overflow-hidden border-b border-white/5"
>
  <div class="animate-marquee whitespace-nowrap inline-block">
    <span class="text-[9px] font-bold uppercase tracking-[0.2em] mx-12"
      >Envío gratuito +50€</span
    >
    <span class="text-[9px] font-bold uppercase tracking-[0.2em] mx-12"
      >Nueva Colección Otoño/Invierno 2026</span
    >
    <span class="text-[9px] font-bold uppercase tracking-[0.2em] mx-12"
      >Descuento exclusivo 10% código: WELCOME10</span
    >
  </div>
</div>

<header
  id="main-header"
  class="sticky top-0 z-[9990] bg-white/90 backdrop-blur-xl border-b border-gray-100 transition-all duration-300"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Navegación Escritorio (Izquierda) -->
      <nav class="hidden lg:flex items-center gap-8 flex-1">
        <a
          href="/"
          class={`text-xs font-black uppercase tracking-widest transition-colors relative group ${isHome ? "text-brand-gold" : "text-slate-900 hover:text-brand-gold"}`}
        >
          Inicio
          <span
            class={`absolute -bottom-1 left-0 h-px bg-brand-gold transition-all ${isHome ? "w-full" : "w-0 group-hover:w-full"}`}
          ></span>
        </a>

        <div class="relative group/tienda">
          <button
            type="button"
            class={`nav-trigger text-xs font-black uppercase tracking-widest transition-all flex items-center gap-1.5 focus:outline-none cursor-pointer ${isCatalogo ? "text-brand-gold" : "text-slate-900 hover:text-brand-gold"}`}
            data-trigger="tienda"
          >
            Tienda
            <svg
              class="nav-arrow w-3 h-3 transition-transform pointer-events-none"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M19 9l-7 7-7-7"></path></svg
            >
          </button>

          <div
            class="nav-dropdown hidden absolute left-0 top-full mt-2 w-[900px] -ml-[100px] rounded-3xl bg-white shadow-2xl z-[10000] p-10 border border-gray-100 animate-slide-up"
            data-menu="tienda"
          >
            <div class="grid grid-cols-3 gap-12 text-left">
              <div>
                <a
                  href="/catalogo/ropa"
                  class="block text-[10px] font-black uppercase tracking-[0.2em] text-brand-gold mb-6 border-b border-brand-gold/10 pb-2 hover:text-brand-black transition-colors"
                >
                  Ropa
                </a>
                <div class="space-y-3">
                  <a
                    href="/catalogo/ropa/camisetas"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Camisetas</a
                  >
                  <a
                    href="/catalogo/ropa/polos"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Polos</a
                  >
                  <a
                    href="/catalogo/ropa/camisas"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Camisas</a
                  >
                  <a
                    href="/catalogo/ropa/sudaderas"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Sudaderas</a
                  >
                  <a
                    href="/catalogo/ropa/jerseys"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Jerseys</a
                  >
                  <a
                    href="/catalogo/ropa/chaquetas"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Chaquetas</a
                  >
                  <a
                    href="/catalogo/ropa/abrigos"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Abrigos</a
                  >
                  <a
                    href="/catalogo/ropa/pantalones"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Pantalones</a
                  >
                </div>
              </div>
              <div>
                <a
                  href="/catalogo/calzado"
                  class="block text-[10px] font-black uppercase tracking-[0.2em] text-brand-gold mb-6 border-b border-brand-gold/10 pb-2 hover:text-brand-black transition-colors"
                >
                  Calzado
                </a>
                <div class="space-y-3">
                  <a
                    href="/catalogo/calzado/zapatillas"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Zapatillas</a
                  >
                  <a
                    href="/catalogo/calzado/zapatos-casual"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Zapatos casual</a
                  >
                  <a
                    href="/catalogo/calzado/botines"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Botines</a
                  >
                  <a
                    href="/catalogo/calzado/sandalias"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Sandalias</a
                  >
                </div>
                <div
                  class="mt-10 p-5 rounded-2xl bg-slate-50 border border-slate-100"
                >
                  <p
                    class="text-[10px] font-bold text-slate-900 uppercase tracking-widest mb-2 italic"
                  >
                    PRO-TIP
                  </p>
                  <p class="text-xs text-slate-500 leading-relaxed">
                    Pruébate nuestro calzado en casa. Devoluciones gratuitas en
                    30 días.
                  </p>
                </div>
              </div>
              <div>
                <a
                  href="/catalogo/complementos"
                  class="block text-[10px] font-black uppercase tracking-[0.2em] text-brand-gold mb-6 border-b border-brand-gold/10 pb-2 hover:text-brand-black transition-colors"
                >
                  Complementos
                </a>
                <div class="space-y-3">
                  <a
                    href="/catalogo/complementos/gorros-gorras-y-sombreros"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Gorros, gorras y sombreros</a
                  >
                  <a
                    href="/catalogo/complementos/bolsos-y-transporte"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Bolsos y transporte</a
                  >
                  <a
                    href="/catalogo/complementos/cinturones"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Cinturones</a
                  >
                  <a
                    href="/catalogo/complementos/gafas-de-sol"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Gafas</a
                  >
                  <a
                    href="/catalogo/complementos/relojeria-y-joyeria"
                    class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                    >Relojería y Joyería</a
                  >
                </div>
                <div class="mt-8">
                  <a
                    href="/catalogo"
                    class="flex items-center justify-between p-4 rounded-xl bg-brand-black text-white hover:bg-brand-gold transition-all group/all"
                  >
                    <span
                      class="text-[10px] font-bold uppercase tracking-widest"
                      >Colección Completa</span
                    >
                    <svg
                      class="w-4 h-4 group-hover/all:translate-x-1 transition-transform"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg
                    >
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <a
          href="/ofertas"
          class={`text-xs font-black uppercase tracking-widest transition-colors flex items-center gap-2 group ${isOfertas ? "text-red-600" : "text-red-500 hover:text-red-600"}`}
        >
          Ofertas <span
            class="flex h-2 w-2 rounded-full bg-red-500 animate-pulse"></span>
        </a>
      </nav>

      <!-- Logo Central -->
      <div class="flex-shrink-0 flex items-center justify-center">
        <a
          href="/"
          class="text-xl lg:text-3xl font-serif font-black tracking-tighter hover:scale-[1.02] transition-transform"
        >
          <span class="text-slate-900">Fashion</span><span
            class="text-brand-gold ml-1">Store</span
          >
        </a>
      </div>

      <!-- Acciones Derecha -->
      <div class="flex-1 flex items-center justify-end gap-1 sm:gap-4">
        <!-- Buscador PC -->
        <div class="relative hidden lg:block">
          <div
            class="flex items-center h-10 px-4 bg-slate-50 border border-slate-100 rounded-full w-44 lg:w-60 focus-within:bg-white transition-all shadow-sm"
          >
            <svg
              class="w-4 h-4 text-slate-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg
            >
            <input
              id="search-input"
              type="text"
              placeholder="Buscar..."
              class="w-full ml-2 bg-transparent text-sm focus:outline-none"
            />
          </div>
          <div
            id="search-results"
            class="hidden absolute top-full right-0 mt-4 w-[350px] bg-white rounded-2xl shadow-2xl border border-gray-100 z-[10002] overflow-hidden"
          >
            <div id="search-results-content" class="py-2"></div>
            <div class="bg-slate-50 p-3 text-center border-t border-slate-100">
              <span
                class="text-[10px] text-slate-400 uppercase font-black tracking-widest"
                >Presiona enter para ver más</span
              >
            </div>
          </div>
        </div>

        <div class="flex items-center gap-0.5 sm:gap-2">
          <!-- Favoritos -->
          <a
            href="/favoritos"
            class="p-2 rounded-full hover:bg-slate-50 relative group transition-colors cursor-pointer"
            title="Favoritos"
          >
            <svg
              class="w-5 h-5 text-slate-700 group-hover:text-red-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.8"
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
              ></path></svg
            >
            <HeaderCounter client:load type="favorite" />
          </a>

          <!-- Perfil PC -->
          <div class="relative hidden lg:block">
            {
              user ? (
                <div class="relative">
                  <button
                    id="profile-trigger"
                    class="flex items-center focus:outline-none p-1 relative z-[100] cursor-pointer"
                  >
                    <div
                      class={`w-8 h-8 rounded-full border flex items-center justify-center transition-colors pointer-events-none shadow-sm ${isAccount ? "bg-brand-gold/10 border-brand-gold" : "bg-slate-200/50 border-slate-200 hover:border-brand-gold"}`}
                    >
                      <span
                        class={`text-xs font-black uppercase ${isAccount ? "text-brand-gold" : "text-slate-800"}`}
                      >
                        {userName.charAt(0)}
                      </span>
                    </div>
                    <div class="pointer-events-none">
                      <HeaderCounter client:load type="notification" />
                    </div>
                  </button>
                  <div
                    id="profile-dropdown"
                    class="hidden absolute right-0 top-full mt-4 w-64 bg-white rounded-2xl shadow-2xl border border-slate-100 py-4 z-[10001] animate-slide-up"
                  >
                    <div class="px-6 py-4 border-b border-gray-50 mb-4">
                      <p class="text-[10px] text-slate-400 font-bold uppercase tracking-widest mb-1 leading-none">
                        TU CUENTA
                      </p>
                      <p class="text-base font-bold text-slate-800 truncate">
                        {userName}
                      </p>
                    </div>
                    <div class="space-y-1">
                      <a
                        href="/mi-cuenta"
                        class="flex items-center px-6 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-brand-black transition-colors font-medium"
                      >
                        Perfil
                      </a>
                      <a
                        href="/mensajes"
                        class="relative flex items-center justify-between px-6 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-brand-black transition-colors font-medium"
                      >
                        Mis Mensajes{" "}
                        <HeaderCounter client:load type="inquiry" />
                      </a>
                      <a
                        href="/mis-pedidos"
                        class="flex items-center px-6 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-brand-black transition-colors font-medium"
                      >
                        Pedidos
                      </a>
                      <a
                        href="/mis-cupones"
                        class="relative flex items-center justify-between px-6 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-brand-black transition-colors font-medium"
                      >
                        Mis Cupones{" "}
                        <HeaderCounter client:load type="coupon_notification" />
                      </a>

                      {user?.app_metadata?.role === "admin" && (
                        <div class="mt-4 pt-4 border-t border-gray-100">
                          <a
                            href="/admin"
                            class="flex items-center px-6 py-2.5 text-[10px] font-black uppercase tracking-widest text-brand-gold hover:text-brand-black"
                          >
                            Admin Panel
                          </a>
                        </div>
                      )}

                      <div class="mt-2 pt-2 border-t border-gray-50 px-2">
                        <button
                          id="logout-button"
                          class="logout-action w-full text-left px-4 py-3 text-sm text-red-500 font-bold hover:bg-red-50 rounded-xl transition-colors cursor-pointer"
                        >
                          Cerrar Sesión
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              ) : (
                <a
                  href="/login"
                  class="px-4 py-2 bg-brand-black text-white text-[10px] font-black uppercase tracking-widest rounded-full hover:bg-brand-gold transition-all cursor-pointer"
                >
                  Login
                </a>
              )
            }
          </div>

          <!-- Carrito -->
          <button
            id="cart-button"
            class="p-2 rounded-full bg-slate-50 hover:bg-brand-gold group transition-all relative cursor-pointer focus:outline-none"
          >
            <svg
              class="w-6 h-6 text-slate-700 group-hover:text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.8"
                d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg
            >
            <HeaderCounter client:load type="cart" dark />
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- BARRA MÓVIL INFERIOR -->
<nav
  class="fixed bottom-0 left-0 right-0 z-[9999] lg:hidden bg-white border-t border-gray-100 px-2 py-2 shadow-[0_-5px_20px_rgba(0,0,0,0.05)] safe-area-bottom"
>
  <div class="flex items-center justify-between max-w-lg mx-auto relative">
    <!-- Inicio -->
    <a
      href="/"
      class={`flex flex-col items-center justify-center gap-1 flex-1 py-1 transition-all ${isHome ? "text-slate-900 scale-105" : "text-slate-400 active:scale-95"}`}
    >
      <svg
        class="w-6 h-6"
        fill={isHome ? "currentColor" : "none"}
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path
          d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
        ></path>
      </svg>
      <span
        class={`text-[9.5px] font-black uppercase tracking-widest ${isHome ? "opacity-100" : "opacity-70"}`}
        >Inicio</span
      >
    </a>

    <!-- Tienda -->
    <a
      href="/catalogo"
      class={`flex flex-col items-center justify-center gap-1 flex-1 py-1 transition-all ${isCatalogo ? "text-slate-900 scale-105" : "text-slate-400 active:scale-95"}`}
    >
      <svg
        class="w-6 h-6"
        fill={isCatalogo ? "currentColor" : "none"}
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
      </svg>
      <span
        class={`text-[9.5px] font-black uppercase tracking-widest ${isCatalogo ? "opacity-100" : "opacity-70"}`}
        >Tienda</span
      >
    </a>

    <!-- Buscar Central (Círculo Negro) -->
    <div class="flex-1 flex justify-center -mt-10 mb-2">
      <button
        id="mobile-search-trigger"
        class="relative group active:scale-90 transition-transform"
      >
        <div
          class="w-16 h-16 bg-brand-black text-white rounded-full flex items-center justify-center shadow-xl border-4 border-white transition-all overflow-hidden"
        >
          <svg
            class="w-7 h-7"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            stroke-width="3"
          >
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
        </div>
        <span
          class="absolute -bottom-6 left-1/2 -translate-x-1/2 text-[9.5px] font-black text-brand-black uppercase tracking-widest whitespace-nowrap"
          >Buscar</span
        >
      </button>
    </div>

    <!-- Ofertas -->
    <a
      href="/ofertas"
      class={`flex flex-col items-center justify-center gap-1 flex-1 py-1 transition-all ${isOfertas ? "text-slate-900 scale-105" : "text-slate-400 active:scale-95"}`}
    >
      <svg
        class="w-6 h-6"
        fill={isOfertas ? "currentColor" : "none"}
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span
        class={`text-[9.5px] font-black uppercase tracking-widest ${isOfertas ? "opacity-100" : "opacity-70"}`}
        >Ofertas</span
      >
    </a>

    <!-- Mi Cuenta -->
    <button
      id="mobile-account-trigger"
      class={`flex flex-col items-center justify-center gap-1 flex-1 py-1 transition-all relative ${isAccount ? "text-slate-900 scale-105" : "text-slate-400 active:scale-95"}`}
    >
      <svg
        class="w-6 h-6"
        fill={isAccount ? "currentColor" : "none"}
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path
          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
        ></path>
      </svg>
      <span
        class={`text-[9.5px] font-black uppercase tracking-widest ${isAccount ? "opacity-100" : "opacity-70"}`}
        >{user ? "Cuenta" : "Login"}</span
      >
      {user && <HeaderCounter client:load type="notification" />}
    </button>
  </div>
</nav>

<!-- BOTTOM SHEET MÓVIL (CUENTA) -->
<div
  id="account-sheet-overlay"
  class="fixed inset-0 z-[10001] bg-black/60 backdrop-blur-sm hidden opacity-0 transition-opacity duration-300"
>
</div>
<div
  id="account-sheet"
  class="fixed bottom-0 left-0 right-0 z-[10002] bg-white rounded-t-[2.5rem] shadow-2xl transform translate-y-full transition-transform duration-500 ease-out px-8 pt-4 pb-12 lg:hidden"
>
  <div class="w-12 h-1.5 bg-gray-100 rounded-full mx-auto mb-8"></div>

  {
    user ? (
      <div class="space-y-8">
        <div class="flex items-center gap-4 border-b border-gray-50 pb-6">
          <div class="w-14 h-14 rounded-full bg-slate-100 border border-brand-gold flex items-center justify-center">
            <span class="text-xl font-black text-slate-800 uppercase">
              {userName.charAt(0)}
            </span>
          </div>
          <div>
            <p class="text-[10px] font-black text-brand-gold uppercase tracking-[0.2em] mb-1 leading-none">
              BIENVENIDO
            </p>
            <p class="text-xl font-black text-slate-900 truncate max-w-[200px]">
              {userName}
            </p>
          </div>
        </div>

        <div class="grid grid-cols-1 gap-4">
          <a
            href="/mi-cuenta"
            class="flex items-center justify-between p-5 bg-slate-50 rounded-2xl group active:bg-slate-100 transition-all"
          >
            <span class="flex items-center gap-4 text-sm font-bold text-slate-700">
              <svg
                class="w-5 h-5 text-slate-400"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>{" "}
              Mi Información
            </span>
            <svg
              class="w-4 h-4 text-slate-300"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="2.5"
            >
              <path d="M9 5l7 7-7 7" />
            </svg>
          </a>
          <a
            href="/mensajes"
            class="flex items-center justify-between p-5 bg-slate-50 rounded-2xl group active:bg-slate-100 transition-all"
          >
            <span class="flex items-center gap-4 text-sm font-bold text-slate-700">
              <svg
                class="w-5 h-5 text-slate-400"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path d="M8 10h.01M12 10h.01M16 10h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
