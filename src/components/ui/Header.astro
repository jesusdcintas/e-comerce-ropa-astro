                    class="hidden absolute right-0 top-full mt-4 w-64 bg-white rounded-2xl shadow-2xl border border-slate-100 py-4 z-[10001] animate-slide-up"
                  >
                    <div class="px-6 py-4 border-b border-gray-50 mb-4">
                      <p class="text-[10px] text-slate-400 font-bold uppercase tracking-widest mb-1 leading-none">
                        TU CUENTA
                      </p>
                      <p class="text-base font-bold text-slate-800 truncate">
                        {userName}
                      </p>
                    </div>
                    <div class="space-y-1">
                      <a
                        href="/mi-cuenta"
                        class="flex items-center px-6 py-2.5 text-sm text-slate-600 hover:bg-slate-50 transition-colors font-medium"
                      >
                        Perfil
                      </a>
                      <a
                        href="/mensajes"
                        class="flex items-center justify-between px-6 py-2.5 text-sm text-slate-600 hover:bg-slate-50 transition-colors font-medium"
                      >
                        Mis Mensajes{" "}
                        <HeaderCounter client:load type="inquiry" />
                      </a>
                      <a
                        href="/mis-pedidos"
                        class="flex items-center px-6 py-2.5 text-sm text-slate-600 hover:bg-slate-50 transition-colors font-medium"
                      >
                        Pedidos
                      </a>
                      <a
                        href="/mis-cupones"
                        class="flex items-center justify-between px-6 py-2.5 text-sm text-slate-600 hover:bg-slate-50 transition-colors font-medium"
                      >
                        Mis Cupones{" "}
                        <HeaderCounter client:load type="coupon_notification" />
                      </a>
                      <button
                        id="logout-button"
                        class="logout-action w-full text-left px-6 py-3 text-sm text-red-500 font-bold hover:bg-red-50 rounded-xl transition-colors cursor-pointer mt-2"
                      >
                        Cerrar Sesión
                      </button>
                    </div>
                  </div>
                </div>
              ) : (
                <a
                  href="/login"
                  class="px-4 py-2 bg-brand-black text-white text-[10px] font-black uppercase tracking-widest rounded-full hover:bg-brand-gold transition-all cursor-pointer"
                >
                  Login
                </a>
              )
            }
          </div>

          <!-- Carrito -->
          <button
            id="cart-button"
            class="p-2 rounded-full bg-slate-50 hover:bg-brand-gold group transition-all relative cursor-pointer focus:outline-none"
          >
            <svg
              class="w-6 h-6 text-slate-700 group-hover:text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.8"
                d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg
            >
            <HeaderCounter client:load type="cart" dark />
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- BARRA MÓVIL INFERIOR -->
<nav
  class="fixed bottom-0 left-0 right-0 z-[9999] lg:hidden bg-white/90 backdrop-blur-xl border-t border-gray-100 px-6 py-3 shadow-[0_-5px_20px_rgba(0,0,0,0.05)] safe-area-bottom"
>
  <div class="flex items-center justify-between max-w-lg mx-auto">
    <a
      href="/"
      class="flex flex-col items-center gap-1 text-slate-900 active:scale-95 transition-transform"
      ><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"
        ><path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"></path></svg
      ><span class="text-[9px] font-black uppercase tracking-widest"
        >Inicio</span
      ></a
    >
    <a
      href="/catalogo"
      class="flex flex-col items-center gap-1 text-slate-400 active:scale-95 transition-transform"
      ><svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="2.5"
        ><path d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg
      ><span class="text-[9px] font-bold uppercase tracking-widest">Tienda</span
      ></a
    >

    <!-- Buscar Central -->
    <button
      id="mobile-search-trigger"
      class="flex flex-col items-center gap-1 -mt-8 relative active:scale-90 transition-transform"
    >
      <div
        class="w-14 h-14 bg-brand-black text-white rounded-full flex items-center justify-center shadow-xl border-4 border-white"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          stroke-width="2.5"
          ><path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
      </div>
      <span
        class="text-[9px] font-black text-brand-black uppercase tracking-widest mt-1"
        >Buscar</span
      >
    </button>

    <a
      href="/ofertas"
      class="flex flex-col items-center gap-1 text-slate-400 active:scale-95 transition-transform"
      ><svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="2.5"
        ><path d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        ></path></svg
      ><span class="text-[9px] font-bold uppercase tracking-widest"
        >Ofertas</span
      ></a
    >

    <!-- Botón Cuenta Móvil (Abre Bottom Sheet) -->
    <button
      id="mobile-account-trigger"
      class="flex flex-col items-center gap-1 text-slate-400 active:scale-95 transition-transform relative"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="2.5"
        ><path
          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
        ></path></svg
      >
      <span class="text-[9px] font-bold uppercase tracking-widest"
        >{user ? "Mi Cuenta" : "Login"}</span
      >
      {user && <HeaderCounter client:load type="notification" />}
    </button>
  </div>
</nav>

<!-- BOTTOM SHEET MÓVIL (CUENTA) -->
<div
  id="account-sheet-overlay"
  class="fixed inset-0 z-[10001] bg-black/60 backdrop-blur-sm hidden opacity-0 transition-opacity duration-300"
>
</div>
<div
  id="account-sheet"
  class="fixed bottom-0 left-0 right-0 z-[10002] bg-white rounded-t-[2.5rem] shadow-2xl transform translate-y-full transition-transform duration-500 ease-out px-8 pt-4 pb-12 lg:hidden"
>
  <!-- Tirador superior -->
  <div class="w-12 h-1.5 bg-gray-100 rounded-full mx-auto mb-8"></div>

  {
    user ? (
      <div class="space-y-8">
        <div class="flex items-center gap-4 border-b border-gray-50 pb-6">
          <div class="w-14 h-14 rounded-full bg-slate-100 border border-brand-gold flex items-center justify-center">
            <span class="text-xl font-black text-slate-800 uppercase">
              {userName.charAt(0)}
            </span>
          </div>
          <div>
            <p class="text-[10px] font-black text-brand-gold uppercase tracking-[0.2em] mb-1 leading-none">
              BIENVENIDO
            </p>
            <p class="text-xl font-black text-slate-900 truncate max-w-[200px]">
              {userName}
            </p>
          </div>
        </div>

        <div class="grid grid-cols-1 gap-4">
          <a
            href="/mi-cuenta"
            class="flex items-center justify-between p-5 bg-slate-50 rounded-2xl group active:bg-slate-100 transition-all"
          >
            <span class="flex items-center gap-4 text-sm font-bold text-slate-700">
              <svg
                class="w-5 h-5 text-slate-400"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>{" "}
              Mi Información
            </span>
            <svg
              class="w-4 h-4 text-slate-300"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="2.5"
            >
              <path d="M9 5l7 7-7 7" />
            </svg>
          </a>
          <a
            href="/mensajes"
            class="flex items-center justify-between p-5 bg-slate-50 rounded-2xl group active:bg-slate-100 transition-all"
          >
            <span class="flex items-center gap-4 text-sm font-bold text-slate-700">
              <svg
                class="w-5 h-5 text-slate-400"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path d="M8 10h.01M12 10h.01M16 10h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>{" "}
              Mis Mensajes
            </span>
            <div class="flex items-center gap-2">
              <HeaderCounter client:load type="inquiry" />
              <svg
                class="w-4 h-4 text-slate-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="2.5"
              >
                <path d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
          <a
            href="/mis-pedidos"
            class="flex items-center justify-between p-5 bg-slate-50 rounded-2xl group active:bg-slate-100 transition-all"
          >
            <span class="flex items-center gap-4 text-sm font-bold text-slate-700">
              <svg
                class="w-5 h-5 text-slate-400"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
              </svg>{" "}
              Mis Pedidos
            </span>
            <svg
              class="w-4 h-4 text-slate-300"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="2.5"
            >
              <path d="M9 5l7 7-7 7" />
            </svg>
          </a>
          <a
            href="/mis-cupones"
            class="flex items-center justify-between p-5 bg-slate-50 rounded-2xl group active:bg-slate-100 transition-all"
          >
            <span class="flex items-center gap-4 text-sm font-bold text-slate-700">
              <svg
                class="w-5 h-5 text-slate-400"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
              </svg>{" "}
              Mis Cupones
            </span>
            <div class="flex items-center gap-2">
              <HeaderCounter client:load type="coupon_notification" />
              <svg
                class="w-4 h-4 text-slate-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="2.5"
              >
                <path d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>

          {user?.app_metadata?.role === "admin" && (
            <a
              href="/admin"
              class="flex items-center justify-between p-5 bg-brand-black text-brand-gold rounded-2xl mt-4"
            >
              <span class="text-xs font-black uppercase tracking-widest">
                Panel Administración
              </span>
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="2.5"
              >
                <path d="M9 5l7 7-7 7" />
              </svg>
            </a>
          )}
        </div>

        <button class="logout-action w-full py-5 text-sm font-black text-red-500 bg-red-50/50 rounded-2xl border border-red-100 mt-6 active:scale-95 transition-all">
          Cerrar Sesión
        </button>
      </div>
    ) : (
      <div class="text-center py-10">
        <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg
            class="w-10 h-10 text-slate-300"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <p class="text-xl font-black text-slate-900 mb-2">Inicia sesión</p>
        <p class="text-sm text-slate-500 mb-8 max-w-[240px] mx-auto">
          Accede a tus pedidos y cupones exclusivos desde tu perfil.
        </p>
        <a
          href="/login"
          class="block w-full py-5 bg-brand-black text-white rounded-2xl font-black uppercase tracking-widest text-xs active:scale-95 transition-all"
        >
          Ir al Login
        </a>
      </div>
