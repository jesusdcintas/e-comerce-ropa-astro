                <div class="space-y-3">
                  {
                    [
                      "Gorras y gorros",
                      "Bolsos y mochilas",
                      "Cinturones",
                      "Gafas",
                      "Relojería",
                    ].map((item) => (
                      <a
                        href="/catalogo/complementos"
                        class="block text-sm text-slate-500 hover:text-brand-black transition-colors"
                      >
                        {item}
                      </a>
                    ))
                  }
                </div>
                <div class="mt-8">
                  <a
                    href="/catalogo"
                    class="flex items-center justify-between p-4 rounded-xl bg-brand-black text-white hover:bg-brand-gold transition-all group/all"
                  >
