<!-- Estilos para Navegación Móvil -->
<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  .animate-marquee {
    display: inline-block;
    padding-left: 100%;
    animation: marquee 30s linear infinite;
  }
  .animate-slide-up {
    animation: slideUp 0.3s ease-out;
  }
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .custom-scrollbar::-webkit-scrollbar {
    width: 4px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #e2e8f0;
    border-radius: 10px;
  }

  /* Ajuste de área segura para iPhone */
  .safe-area-inset-bottom {
    padding-bottom: calc(0.75rem + env(safe-area-inset-bottom, 0px));
  }
</style>

<!-- Script de Interacciones Múltiples -->
<script>
  import { supabase } from "../../lib/supabase";
  import { isCartOpen, clearCart } from "../../stores/cartStore";
  import { clearFavorites } from "../../stores/favoriteStore";

  function setupMobileExperience() {
    const searchTrigger = document.getElementById("mobile-search-trigger");
    const searchOverlay = document.getElementById("mobile-search-overlay");
    const closeSearch = document.getElementById("close-search");
    const searchInput = document.getElementById(
      "mobile-search-input",
    ) as HTMLInputElement;
    const resultsContainer = document.getElementById(
      "mobile-search-results-content",
    );

    // Lógica del buscador full-screen
    searchTrigger?.addEventListener("click", () => {
      searchOverlay?.classList.remove("translate-y-full");
      setTimeout(() => searchInput?.focus(), 300);
      document.body.style.overflow = "hidden";
    });

    closeSearch?.addEventListener("click", () => {
      searchOverlay?.classList.add("translate-y-full");
      document.body.style.overflow = "";
    });

    // Búsqueda en vivo (mismo motor que PC)
    let searchTimeout: any;
    searchInput?.addEventListener("input", async () => {
      clearTimeout(searchTimeout);
      const query = searchInput.value.trim();
      if (query.length < 2) return;

      searchTimeout = setTimeout(async () => {
        const res = await fetch(
          `/api/search.json?q=${encodeURIComponent(query)}`,
        );
        const data = await res.json();
        if (data.success && data.results.length > 0 && resultsContainer) {
          resultsContainer.innerHTML = data.results
            .map(
              (p: any) => `
            <a href="/producto/${p.slug}" class="flex items-center gap-4 p-4 bg-slate-50 rounded-2xl hover:bg-white border border-transparent hover:border-slate-100 transition-all">
              <img src="${p.images?.[0] || ""}" class="w-16 h-16 object-cover rounded-xl shadow-sm" />
              <div>
                <p class="text-sm font-black text-slate-900">${p.name}</p>
                <p class="text-xs text-brand-gold font-bold">Ver Detalles →</p>
              </div>
            </a>
          `,
            )
            .join("");
        }
      }, 300);
    });

    // Menús Desktop y otros
    const profileTrigger = document.getElementById("profile-trigger");
    const profileDropdown = document.getElementById("profile-dropdown");
    const cartButton = document.getElementById("cart-button");

    profileTrigger?.addEventListener("click", (e) => {
      e.stopPropagation();
      profileDropdown?.classList.toggle("hidden");
    });

    document.querySelectorAll(".nav-trigger").forEach((trig) => {
      trig.addEventListener("click", (e) => {
        e.stopPropagation();
        const key = trig.getAttribute("data-trigger");
        const mm = document.querySelector(`[data-menu="${key}"]`);
        document
          .querySelectorAll(".nav-dropdown")
          .forEach((d) => d.classList.add("hidden"));
        mm?.classList.remove("hidden");
      });
    });

    document.addEventListener("click", () => {
      profileDropdown?.classList.add("hidden");
      document
        .querySelectorAll(".nav-dropdown")
        .forEach((d) => d.classList.add("hidden"));
    });

    cartButton?.addEventListener("click", () => isCartOpen.set(true));

    // Logout
    document
      .getElementById("logout-button")
      ?.addEventListener("click", async () => {
        await supabase.auth.signOut();
        document.cookie = "sb-access-token=; Path=/; Max-Age=0";
        window.location.href = "/";
      });
  }

  document.addEventListener("DOMContentLoaded", setupMobileExperience);
  document.addEventListener("astro:after-swap", setupMobileExperience);
  if (document.readyState !== "loading") setupMobileExperience();
</script>
